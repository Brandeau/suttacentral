  "an7.94:1.1": "Aṅguttara Nikāya 7",
  "an7.94:2.1": "9. Samaṇavagga",
  "an7.94:3.1": "94. Saddhammasutta",
  "an7.94:4.1": "“Sattime, bhikkhave, saddhammā.",
  "an7.94:4.2": "Katame satta?",
  "an7.94:4.3": "Saddho hoti, hirīmā hoti, ottappī hoti, bahussuto hoti, āraddhavīriyo hoti, satimā hoti, paññavā hoti.",
  "an7.94:4.4": "Ime kho, bhikkhave, satta saddhammā”ti.",
  "an7.94:5.1": "Dasamaṃ.",
  "an7.94:6.1": "Samaṇavaggo navamo.",
  "an7.94:7.1": "Bhikkhuṃ samaṇo brāhmaṇo,",
  "an7.94:7.2": "sottiyo ceva nhātako;",
  "an7.94:7.3": "Vedagū ariyo arahā,",
  "an7.94:7.4": "asaddhammā ca saddhammāti."
}