  "an7.5:1.1": "Aṅguttara Nikāya 7",
  "an7.5:2.1": "1. Dhanavagga",
  "an7.5:3.1": "5. Saṅkhittadhanasutta",
  "an7.5:4.1": "“Sattimāni, bhikkhave, dhanāni.",
  "an7.5:4.2": "Katamāni satta?",
  "an7.5:4.3": "Saddhādhanaṃ, sīladhanaṃ, hirīdhanaṃ, ottappadhanaṃ, sutadhanaṃ, cāgadhanaṃ, paññādhanaṃ.",
  "an7.5:4.4": "Imāni kho, bhikkhave, satta dhanānīti.",
  "an7.5:5.1": "Saddhādhanaṃ sīladhanaṃ,",
  "an7.5:5.2": "hirī ottappiyaṃ dhanaṃ;",
  "an7.5:5.3": "Sutadhanañca cāgo ca,",
  "an7.5:5.4": "paññā ve sattamaṃ dhanaṃ.",
  "an7.5:6.1": "Yassa ete dhanā atthi,",
  "an7.5:6.2": "itthiyā purisassa vā;",
  "an7.5:6.3": "Adaliddoti taṃ āhu,",
  "an7.5:6.4": "amoghaṃ tassa jīvitaṃ.",
  "an7.5:7.1": "Tasmā saddhañca sīlañca,",
  "an7.5:7.2": "Pasādaṃ dhammadassanaṃ;",
  "an7.5:7.3": "Anuyuñjetha medhāvī,",
  "an7.5:7.4": "<span class=\\\"var\\\" title=\\\"varaṃ (mr)\\\" id=\\\"note5\\\">Saraṃ</span> buddhāna sāsanan”ti.",
  "an7.5:8.1": "Pañcamaṃ."
}