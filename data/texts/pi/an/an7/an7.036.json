  "an7.36:1.1": "Aṅguttara Nikāya 7",
  "an7.36:2.1": "4. Devatāvagga",
  "an7.36:3.1": "36. Paṭhamamittasutta",
  "an7.36:4.1": "“Sattahi, bhikkhave, aṅgehi samannāgato mitto sevitabbo.",
  "an7.36:4.2": "Katamehi sattahi?",
  "an7.36:4.3": "Duddadaṃ dadāti, dukkaraṃ karoti, dukkhamaṃ khamati, <span class=\\\"var\\\" title=\\\"guyhassa (mr)\\\" id=\\\"note50\\\">guyhamassa</span> āvi karoti, <span class=\\\"var\\\" title=\\\"guyhaṃ assa (bj) | guyhassa (mr)\\\" id=\\\"note51\\\">guyhamassa</span> <span class=\\\"var\\\" title=\\\"parigūhati (bj, s1-3) | pariguyhati (pts1, mr)\\\" id=\\\"note52\\\">pariguhati</span>, āpadāsu na jahati, <span class=\\\"var\\\" title=\\\"khīṇe (mr)\\\" id=\\\"note53\\\">khīṇena</span> nātimaññati.",
  "an7.36:4.4": "Imehi kho, bhikkhave, sattahi aṅgehi samannāgato mitto sevitabboti.",
  "an7.36:5.1": "Duddadaṃ dadāti mitto,",
  "an7.36:5.2": "dukkarañcāpi kubbati;",
  "an7.36:5.3": "Athopissa duruttāni,",
  "an7.36:5.4": "khamati <span class=\\\"var\\\" title=\\\"dukkhamānipi (bj, s1-3, pts1)\\\" id=\\\"note54\\\">dukkhamāni ca</span>.",
  "an7.36:6.1": "<span class=\\\"var\\\" title=\\\"guyhaṃ cassa (bj) | guyhamassa ca (s1-3)\\\" id=\\\"note55\\\">Guyhañca tassa</span> akkhāti,",
  "an7.36:6.2": "guyhassa parigūhati;",
  "an7.36:6.3": "Āpadāsu na jahāti,",
  "an7.36:6.4": "khīṇena nātimaññati.",
  "an7.36:7.1": "Yamhi etāni ṭhānāni,",
  "an7.36:7.2": "<span class=\\\"var\\\" title=\\\"saṃvijjantidha (pts1) | saṃvijjanti ca (mr)\\\" id=\\\"note56\\\">saṃvijjantīdha</span> puggale;",
  "an7.36:7.3": "So mitto mittakāmena,",
  "an7.36:7.4": "bhajitabbo tathāvidho”ti.",
  "an7.36:8.1": "Pañcamaṃ."
}