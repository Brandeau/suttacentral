  "an7.10:1.1": "Aṅguttara Nikāya 7",
  "an7.10:2.1": "1. Dhanavagga",
  "an7.10:3.1": "10. Macchariyasutta",
  "an7.10:4.1": "“Sattimāni, bhikkhave, saṃyojanāni.",
  "an7.10:4.2": "Katamāni satta?",
  "an7.10:4.3": "Anunayasaṃyojanaṃ, paṭighasaṃyojanaṃ, diṭṭhisaṃyojanaṃ, vicikicchāsaṃyojanaṃ, mānasaṃyojanaṃ, issāsaṃyojanaṃ, macchariyasaṃyojanaṃ.",
  "an7.10:4.4": "Imāni kho, bhikkhave, satta saṃyojanānī”ti.",
  "an7.10:5.1": "Dasamaṃ.",
  "an7.10:6.1": "Dhanavaggo paṭhamo.",
  "an7.10:7.1": "Dve piyāni balaṃ dhanaṃ,",
  "an7.10:7.2": "Saṅkhittañceva vitthataṃ;",
  "an7.10:7.3": "Uggaṃ saṃyojanañceva,",
  "an7.10:7.4": "Pahānaṃ macchariyena cāti."
}