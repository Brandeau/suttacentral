  "an7.3:1.1": "Aṅguttara Nikāya 7",
  "an7.3:2.1": "1. Dhanavagga",
  "an7.3:3.1": "<span class=\\\"var\\\" title=\\\"saṅkhittasattabalasuttaṃ (bj)\\\" id=\\\"note2\\\">3. Saṅkhittabalasutta</span>",
  "an7.3:4.1": "<span class=\\\"evam\\\">Evaṃ me sutaṃ—​</span>",
  "an7.3:4.2": "ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme … pe …",
  "an7.3:4.3": "sattimāni, bhikkhave, balāni.",
  "an7.3:4.4": "Katamāni satta?",
  "an7.3:4.5": "Saddhābalaṃ, vīriyabalaṃ, hirībalaṃ, ottappabalaṃ, satibalaṃ, samādhibalaṃ, paññābalaṃ.",
  "an7.3:4.6": "Imāni kho, bhikkhave, satta balānīti.",
  "an7.3:5.1": "Saddhābalaṃ vīriyañca,",
  "an7.3:5.2": "<span class=\\\"var\\\" title=\\\"hiri (bj, pts1, mr)\\\" id=\\\"note3\\\">hirī</span> ottappiyaṃ balaṃ;",
  "an7.3:5.3": "Satibalaṃ samādhi ca,",
  "an7.3:5.4": "paññā ve sattamaṃ balaṃ;",
  "an7.3:5.5": "Etehi balavā bhikkhu,",
  "an7.3:5.6": "sukhaṃ jīvati paṇḍito.",
  "an7.3:6.1": "Yoniso vicine dhammaṃ,",
  "an7.3:6.2": "paññāyatthaṃ vipassati;",
  "an7.3:6.3": "Pajjotasseva nibbānaṃ,",
  "an7.3:6.4": "vimokkho hoti cetaso”ti.",
  "an7.3:7.1": "Tatiyaṃ."
}