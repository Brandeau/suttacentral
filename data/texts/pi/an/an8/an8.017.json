  "an8.17:1.1": "Aṅguttara Nikāya 8",
  "an8.17:2.1": "2. Mahāvagga",
  "an8.17:3.1": "<span class=\\\"var\\\" title=\\\"purisabandhanasuttaṃ (bj)\\\" id=\\\"note70\\\">17. Paṭhamabandhanasutta</span>",
  "an8.17:4.1": "“Aṭṭhahi, bhikkhave, ākārehi itthī purisaṃ bandhati.",
  "an8.17:4.2": "Katamehi aṭṭhahi?",
  "an8.17:4.3": "Ruṇṇena, bhikkhave, itthī purisaṃ bandhati;",
  "an8.17:4.4": "hasitena, bhikkhave, itthī purisaṃ bandhati;",
  "an8.17:4.5": "bhaṇitena, bhikkhave, itthī purisaṃ bandhati;",
  "an8.17:4.6": "ākappena, bhikkhave, itthī purisaṃ bandhati;",
  "an8.17:4.7": "vanabhaṅgena, bhikkhave, itthī purisaṃ bandhati;",
  "an8.17:4.8": "gandhena, bhikkhave, itthī purisaṃ bandhati;",
  "an8.17:4.9": "rasena, bhikkhave, itthī purisaṃ bandhati;",
  "an8.17:4.10": "phassena, bhikkhave, itthī purisaṃ bandhati.",
  "an8.17:4.11": "Imehi kho, bhikkhave, aṭṭhahākārehi itthī purisaṃ bandhati.",
  "an8.17:4.12": "Te, bhikkhave, sattā <span class=\\\"var\\\" title=\\\"subandhā (si, s1-3, mr)\\\" id=\\\"note71\\\">subaddhā</span>, <span class=\\\"var\\\" title=\\\"yeva (s1-3, pts1, mr)\\\" id=\\\"note72\\\">ye</span> phassena <span class=\\\"var\\\" title=\\\"bandhāti (bj, s1-3, mr)\\\" id=\\\"note73\\\">baddhā”ti</span>.",
  "an8.17:5.1": "Sattamaṃ."
}