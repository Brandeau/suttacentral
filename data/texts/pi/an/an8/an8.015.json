  "an8.15:1.1": "Aṅguttara Nikāya 8",
  "an8.15:2.1": "2. Mahāvagga",
  "an8.15:3.1": "15. Malasutta",
  "an8.15:4.1": "“Aṭṭhimāni, bhikkhave, malāni.",
  "an8.15:4.2": "Katamāni aṭṭha?",
  "an8.15:4.3": "Asajjhāyamalā, bhikkhave, mantā;",
  "an8.15:4.4": "anuṭṭhānamalā, bhikkhave, gharā;",
  "an8.15:4.5": "malaṃ, bhikkhave, vaṇṇassa kosajjaṃ;",
  "an8.15:4.6": "pamādo, bhikkhave, rakkhato malaṃ;",
  "an8.15:4.7": "malaṃ, bhikkhave, itthiyā duccaritaṃ;",
  "an8.15:4.8": "maccheraṃ, bhikkhave, dadato malaṃ;",
  "an8.15:4.9": "malā, bhikkhave, pāpakā akusalā dhammā asmiṃ loke paramhi ca;",
  "an8.15:4.10": "<span class=\\\"var\\\" title=\\\"tato ca (s1-3, pts1)\\\" id=\\\"note65\\\">tato</span>, bhikkhave, malā malataraṃ avijjā paramaṃ malaṃ.",
  "an8.15:4.11": "Imāni kho, bhikkhave, aṭṭha malānīti.",
  "an8.15:5.1": "Asajjhāyamalā mantā,",
  "an8.15:5.2": "anuṭṭhānamalā gharā;",
  "an8.15:5.3": "Malaṃ vaṇṇassa kosajjaṃ,",
  "an8.15:5.4": "pamādo rakkhato malaṃ.",
  "an8.15:6.1": "Malitthiyā duccaritaṃ,",
  "an8.15:6.2": "maccheraṃ dadato malaṃ;",
  "an8.15:6.3": "Malā ve pāpakā dhammā,",
  "an8.15:6.4": "asmiṃ loke paramhi ca;",
  "an8.15:6.5": "Tato malā malataraṃ,",
  "an8.15:6.6": "avijjā paramaṃ malan”ti.",
  "an8.15:7.1": "Pañcamaṃ."
}