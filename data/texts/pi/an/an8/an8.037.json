  "an8.37:1.1": "Aṅguttara Nikāya 8",
  "an8.37:2.1": "4. Dānavagga",
  "an8.37:3.1": "37. Sappurisadānasutta",
  "an8.37:4.1": "“Aṭṭhimāni, bhikkhave, sappurisadānāni.",
  "an8.37:4.2": "Katamāni aṭṭha?",
  "an8.37:4.3": "Suciṃ deti, paṇītaṃ deti, kālena deti, kappiyaṃ deti, viceyya deti, abhiṇhaṃ deti, dadaṃ cittaṃ pasādeti, datvā attamano hoti.",
  "an8.37:4.4": "Imāni kho, bhikkhave, aṭṭha sappurisadānānīti.",
  "an8.37:5.1": "Suciṃ paṇītaṃ kālena,",
  "an8.37:5.2": "kappiyaṃ pānabhojanaṃ;",
  "an8.37:5.3": "Abhiṇhaṃ dadāti dānaṃ,",
  "an8.37:5.4": "<span class=\\\"var\\\" title=\\\"sukhette (pts1)\\\" id=\\\"note136\\\">sukhettesu</span> brahmacārisu.",
  "an8.37:6.1": "<span class=\\\"var\\\" title=\\\"na ca (bj, pts1)\\\" id=\\\"note137\\\">Neva</span> vippaṭisārissa,",
  "an8.37:6.2": "cajitvā āmisaṃ bahuṃ;",
  "an8.37:6.3": "Evaṃ dinnāni dānāni,",
  "an8.37:6.4": "vaṇṇayanti vipassino.",
  "an8.37:7.1": "<span class=\\\"cross\\\" title=\\\"^an4.40#1 [40. Udāyīsutta] | ^an6.37#1 [37. Chaḷaṅgadānasutta]\\\" id=\\\"note138\\\">*</span> <a class=\\\"sc\\\" id=\\\"4\\\"></a>Evaṃ yajitvā medhāvī,",
  "an8.37:7.2": "saddho muttena cetasā;",
  "an8.37:7.3": "<span class=\\\"var\\\" title=\\\"abyāpajjhaṃ (bj, s1-3, mr) | avyāpajjhaṃ (pts1)\\\" id=\\\"note139\\\">Abyābajjhaṃ</span> sukhaṃ lokaṃ,",
  "an8.37:7.4": "paṇḍito upapajjatī”ti.",
  "an8.37:8.1": "Sattamaṃ."
}