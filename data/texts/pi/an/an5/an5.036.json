  "an5.36:1.1": "Aṅguttara Nikāya 5",
  "an5.36:2.1": "4. Sumanavagga",
  "an5.36:3.1": "36. Kāladānasutta",
  "an5.36:4.1": "“Pañcimāni, bhikkhave, kāladānāni.",
  "an5.36:4.2": "Katamāni pañca?",
  "an5.36:4.3": "Āgantukassa dānaṃ deti;",
  "an5.36:4.4": "gamikassa dānaṃ deti;",
  "an5.36:4.5": "gilānassa dānaṃ deti;",
  "an5.36:4.6": "dubbhikkhe dānaṃ deti;",
  "an5.36:4.7": "yāni tāni navasassāni navaphalāni tāni paṭhamaṃ sīlavantesu patiṭṭhāpeti.",
  "an5.36:4.8": "Imāni kho, bhikkhave, pañca kāladānānīti.",
  "an5.36:5.1": "Kāle dadanti sappaññā,",
  "an5.36:5.2": "vadaññū vītamaccharā;",
  "an5.36:5.3": "Kālena dinnaṃ ariyesu,",
  "an5.36:5.4": "ujubhūtesu tādisu.",
  "an5.36:6.1": "Vippasannamanā tassa,",
  "an5.36:6.2": "vipulā hoti dakkhiṇā;",
  "an5.36:6.3": "Ye tattha anumodanti,",
  "an5.36:6.4": "veyyāvaccaṃ karonti vā;",
  "an5.36:6.5": "<span class=\"var\" title=\"na tesaṃ (bj, pts1, mr)\" id=\"note98\">Na tena</span> dakkhiṇā ūnā,",
  "an5.36:6.6": "tepi puññassa bhāgino.",
  "an5.36:7.1": "Tasmā dade appaṭivānacitto,",
  "an5.36:7.2": "Yattha dinnaṃ mahapphalaṃ;",
  "an5.36:7.3": "Puññāni paralokasmiṃ,",
  "an5.36:7.4": "Patiṭṭhā honti pāṇinan”ti.",
  "an5.36:8.1": "Chaṭṭhaṃ."
}