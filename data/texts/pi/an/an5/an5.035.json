  "an5.35:1.1": "Aṅguttara Nikāya 5",
  "an5.35:2.1": "4. Sumanavagga",
  "an5.35:3.1": "35. Dānānisaṃsasutta",
  "an5.35:4.1": "“Pañcime, bhikkhave, dāne ānisaṃsā.",
  "an5.35:4.2": "Katame pañca?",
  "an5.35:4.3": "Bahuno janassa piyo hoti manāpo;",
  "an5.35:4.4": "santo sappurisā bhajanti;",
  "an5.35:4.5": "kalyāṇo kittisaddo abbhuggacchati;",
  "an5.35:4.6": "<span class=\"var\" title=\"gihidhammā anapeto (bj, pts1) | gihidhammamanupagato (mr)\" id=\"note95\">gihidhammā anapagato</span> hoti;",
  "an5.35:4.7": "kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjati.",
  "an5.35:4.8": "Ime kho, bhikkhave, pañca dāne ānisaṃsāti.",
  "an5.35:5.1": "Dadamāno piyo hoti,",
  "an5.35:5.2": "sataṃ dhammaṃ anukkamaṃ;",
  "an5.35:5.3": "Santo naṃ<span class=\"var\" title=\" bhajanti sappurisā (sī )\" id=\"note96\"> sadā bhajanti</span>,",
  "an5.35:5.4": "saññatā brahmacārayo.",
  "an5.35:6.1": "Te tassa dhammaṃ desenti,",
  "an5.35:6.2": "Sabbadukkhāpanūdanaṃ;",
  "an5.35:6.3": "Yaṃ so dhammaṃ idhaññāya,",
  "an5.35:6.4": "Parinibbāti anāsavo”ti.",
  "an5.35:7.1": "Pañcamaṃ."
}