  "an5.40:1.1": "Aṅguttara Nikāya 5",
  "an5.40:2.1": "4. Sumanavagga",
  "an5.40:3.1": "<span class=\"var\" id=\"note105\" title=\"mahāsālasuttaṃ (bj)\">40. Mahāsālaputtasutta</span>",
  "an5.40:4.1": "“Himavantaṃ, bhikkhave, pabbatarājaṃ nissāya mahāsālā pañcahi vaḍḍhīhi vaḍḍhanti.",
  "an5.40:4.2": "Katamāhi pañcahi?",
  "an5.40:4.3": "Sākhāpattapalāsena vaḍḍhanti;",
  "an5.40:4.4": "tacena vaḍḍhanti;",
  "an5.40:4.5": "papaṭikāya vaḍḍhanti;",
  "an5.40:4.6": "pheggunā vaḍḍhanti;",
  "an5.40:4.7": "sārena vaḍḍhanti.",
  "an5.40:4.8": "Himavantaṃ, bhikkhave, pabbatarājaṃ nissāya mahāsālā imāhi pañcahi vaḍḍhīhi vaḍḍhanti.",
  "an5.40:4.9": "Evamevaṃ kho, bhikkhave, saddhaṃ kulaputtaṃ nissāya antojano pañcahi vaḍḍhīhi vaḍḍhati.",
  "an5.40:4.10": "Katamāhi pañcahi?",
  "an5.40:4.11": "Saddhāya vaḍḍhati;",
  "an5.40:4.12": "sīlena vaḍḍhati;",
  "an5.40:4.13": "sutena vaḍḍhati;",
  "an5.40:4.14": "cāgena vaḍḍhati;",
  "an5.40:4.15": "paññāya vaḍḍhati.",
  "an5.40:4.16": "Saddhaṃ, bhikkhave, kulaputtaṃ nissāya antojano imāhi pañcahi vaḍḍhīhi vaḍḍhatīti.",
  "an5.40:5.1": "Yathā hi pabbato selo,",
  "an5.40:5.2": "araññasmiṃ brahāvane;",
  "an5.40:5.3": "Taṃ rukkhā upanissāya,",
  "an5.40:5.4": "vaḍḍhante te vanappatī.",
  "an5.40:6.1": "Tatheva sīlasampannaṃ,",
  "an5.40:6.2": "Saddhaṃ <span class=\"var\" title=\"kulapatiṃ idha (bj, pts1) | kulaputtaṃ idha (s1-3)\" id=\"note106\">kulaputtaṃ imaṃ</span>;",
  "an5.40:6.3": "Upanissāya vaḍḍhanti,",
  "an5.40:6.4": "Puttadārā ca bandhavā;",
  "an5.40:6.5": "Amaccā ñātisaṅghā ca,",
  "an5.40:6.6": "Ye cassa anujīvino.",
  "an5.40:7.1": "Tyassa sīlavato sīlaṃ,",
  "an5.40:7.2": "cāgaṃ sucaritāni ca;",
  "an5.40:7.3": "Passamānānukubbanti,",
  "an5.40:7.4": "ye bhavanti vicakkhaṇā.",
  "an5.40:8.1": "Idha dhammaṃ caritvāna,",
  "an5.40:8.2": "<span class=\"var\" title=\"saggaṃ (s1-3, mr)\" id=\"note107\">maggaṃ</span> sugatigāminaṃ;",
  "an5.40:8.3": "Nandino devalokasmiṃ,",
  "an5.40:8.4": "modanti kāmakāmino”ti.",
  "an5.40:9.1": "Dasamaṃ.",
  "an5.40:10.1": "Sumanavaggo catuttho.",
  "an5.40:11.1": "Sumanā cundī uggaho,",
  "an5.40:11.2": "sīho dānānisaṃsako;",
  "an5.40:11.3": "Kālabhojanasaddhā ca,",
  "an5.40:11.4": "puttasālehi te dasāti."
}