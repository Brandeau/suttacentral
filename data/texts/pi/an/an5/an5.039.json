  "an5.39:1.1": "Aṅguttara Nikāya 5",
  "an5.39:2.1": "4. Sumanavagga",
  "an5.39:3.1": "39. Puttasutta",
  "an5.39:4.1": "“Pañcimāni, bhikkhave, ṭhānāni sampassantā mātāpitaro puttaṃ icchanti kule jāyamānaṃ.",
  "an5.39:4.2": "Katamāni pañca?",
  "an5.39:4.3": "Bhato vā no bharissati;",
  "an5.39:4.4": "kiccaṃ vā no karissati;",
  "an5.39:4.5": "kulavaṃso ciraṃ ṭhassati;",
  "an5.39:4.6": "dāyajjaṃ paṭipajjissati;",
  "an5.39:4.7": "atha vā pana petānaṃ kālaṅkatānaṃ dakkhiṇaṃ anuppadassatīti.",
  "an5.39:4.8": "Imāni kho, bhikkhave, pañca ṭhānāni sampassantā mātāpitaro puttaṃ icchanti kule jāyamānanti.",
  "an5.39:5.1": "<span class=\"cross\" title=\"^kv2.3#57 [Sattamavagga/ Itodinnakathā]\" id=\"note104\">*</span> <a class=\"sc\" id=\"2\"></a>Pañca ṭhānāni sampassaṃ,",
  "an5.39:5.2": "puttaṃ icchanti paṇḍitā;",
  "an5.39:5.3": "Bhato vā no bharissati,",
  "an5.39:5.4": "kiccaṃ vā no karissati.",
  "an5.39:6.1": "Kulavaṃso ciraṃ tiṭṭhe,",
  "an5.39:6.2": "dāyajjaṃ paṭipajjati;",
  "an5.39:6.3": "Atha vā pana petānaṃ,",
  "an5.39:6.4": "dakkhiṇaṃ anuppadassati.",
  "an5.39:7.1": "Ṭhānānetāni sampassaṃ,",
  "an5.39:7.2": "puttaṃ icchanti paṇḍitā;",
  "an5.39:7.3": "Tasmā santo sappurisā,",
  "an5.39:7.4": "kataññū katavedino.",
  "an5.39:8.1": "Bharanti mātāpitaro,",
  "an5.39:8.2": "pubbe katamanussaraṃ;",
  "an5.39:8.3": "Karonti nesaṃ kiccāni,",
  "an5.39:8.4": "yathā taṃ pubbakārinaṃ.",
  "an5.39:9.1": "Ovādakārī bhataposī,",
  "an5.39:9.2": "kulavaṃsaṃ ahāpayaṃ;",
  "an5.39:9.3": "Saddho sīlena sampanno,",
  "an5.39:9.4": "putto hoti pasaṃsiyo”ti.",
  "an5.39:10.1": "Navamaṃ."
}