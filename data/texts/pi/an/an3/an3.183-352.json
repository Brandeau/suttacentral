  "an3.183-352:7.1": "<span class=\"var\" title=\" etthantare pāṭho syā1-3, kaṃ, ka-ma potthakesu na\" id=\"note463\">Idamavoca bhagavā.",
  "an3.183-352:7.2": "Attamanā te bhikkhū bhagavato bhāsitaṃ abhinandunti</span>.",
  "an3.183-352:8.1": "Rāgapeyyālaṃ niṭṭhitaṃ.",
  "an3.183-352:9.1": "<span class=\"cross\" title=\"imā uddānagāthāyo bj, s1-3, km, pts1 potthakesu na\" id=\"note465\">*</span> <a class=\"sc\" id=\"5\"></a>Rāgaṃ dosañca mohañca,",
  "an3.183-352:9.2": "kodhūpanāhapañcamaṃ;",
  "an3.183-352:9.3": "Makkhapaḷāsaissā ca,",
  "an3.183-352:9.4": "maccharimāyāsāṭheyyā.",
  "an3.183-352:10.1": "Thambhasārambhamānañca,",
  "an3.183-352:10.2": "atimānamadassa ca;",
  "an3.183-352:10.3": "Pamādā sattarasa vuttā,",
  "an3.183-352:10.4": "rāgapeyyālanissitā.",
  "an3.183-352:11.1": "Ete opammayuttena,",
  "an3.183-352:11.2": "āpādena abhiññāya;",
  "an3.183-352:11.3": "Pariññāya parikkhayā,",
  "an3.183-352:11.4": "pahānakkhayabbayena;",
  "an3.183-352:11.5": "Virāganirodhacāgaṃ,",
  "an3.183-352:11.6": "paṭinissagge ime dasa.",
  "an3.183-352:12.1": "Suññato animitto ca,",
  "an3.183-352:12.2": "appaṇihito ca tayo;",
  "an3.183-352:12.3": "Samādhimūlakā peyyā—​",
  "an3.183-352:12.4": "lesupi vavatthitā cāti.",
  "an3.183-352:13.1": "Tatiyo paṇṇāsako niṭṭhito.",
  "an3.183-352:14.1": "Tikanipātapāḷi niṭṭhitā."
