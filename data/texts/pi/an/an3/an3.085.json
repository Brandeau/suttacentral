  "an3.85:1.1": "Aṅguttara Nikāya 3",
  "an3.85:2.1": "9. Samaṇavagga",
  "an3.85:3.1": "85. Sekkhasutta",
  "an3.85:4.1": "Atha kho aññataro bhikkhu yena bhagavā tenupasaṅkami;",
  "an3.85:4.2": "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi.",
  "an3.85:4.3": "Ekamantaṃ nisinno kho so bhikkhu bhagavantaṃ etadavoca:",
  "an3.85:5.1": "“‘Sekho, sekho’ti, bhante, vuccati.",
  "an3.85:5.2": "Kittāvatā nu kho, bhante, sekho hotī”ti?",
  "an3.85:5.3": "“Sikkhatīti kho, bhikkhu, tasmā sekhoti vuccati.",
  "an3.85:5.4": "Kiñca sikkhati?",
  "an3.85:5.5": "Adhisīlampi sikkhati, adhicittampi sikkhati, adhipaññampi sikkhati.",
  "an3.85:5.6": "Sikkhatīti kho, bhikkhu, tasmā sekhoti vuccatīti.",
  "an3.85:6.1": "<span class=\"cross\" title=\"^it62#1 [Indriyasutta] | ^it102#1 [Āsavakkhayasutta]\" id=\"note316\">*</span> <a class=\"sc\" id=\"3\"></a>Sekhassa sikkhamānassa,",
  "an3.85:6.2": "ujumaggānusārino;",
  "an3.85:6.3": "Khayasmiṃ paṭhamaṃ ñāṇaṃ,",
  "an3.85:6.4": "tato aññā anantarā.",
  "an3.85:7.1": "Tato <span class=\"var\" title=\"aññāvimuttiyā (mr)\" id=\"note317\">aññāvimuttassa</span>,",
  "an3.85:7.2": "<span class=\"var\" title=\"ñāṇañca (mr)\" id=\"note318\">ñāṇaṃ ve</span> hoti tādino;",
  "an3.85:7.3": "Akuppā me vimuttīti,",
  "an3.85:7.4": "bhavasaṃyojanakkhaye”ti.",
  "an3.85:8.1": "Pañcamaṃ.",
  "an3.85:8.2": "()"
}