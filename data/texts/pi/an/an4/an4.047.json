  "an4.47:1.1": "Aṅguttara Nikāya 4",
  "an4.47:2.1": "5. Rohitassavagga",
  "an4.47:3.1": "<span class=\"var\" id=\"note153\" title=\"suvidūravidūrasuttaṃ (bj)\">47. Suvidūrasutta</span>",
  "an4.47:4.1": "<span class=\"cross\" title=\"^kv2.3#37 [Sattamavagga/ Paribhogamayapuññakathā] | ^kv3.4#26 [Terasamavagga/ Nivutakathā]\" id=\"note154\">*</span> “Cattārimāni, bhikkhave, suvidūravidūrāni.",
  "an4.47:4.2": "Katamāni cattāri?",
  "an4.47:4.3": "Nabhañca, bhikkhave, pathavī ca;",
  "an4.47:4.4": "idaṃ paṭhamaṃ suvidūravidūre.",
  "an4.47:4.5": "Orimañca, bhikkhave, tīraṃ samuddassa pārimañca;",
  "an4.47:4.6": "idaṃ dutiyaṃ suvidūravidūre.",
  "an4.47:4.7": "Yato ca, bhikkhave, verocano abbhudeti yattha ca <span class=\"var\" title=\"atthaṅgameti (s1-3) | veti (mr)\" id=\"note155\">atthameti</span>;",
  "an4.47:4.8": "idaṃ tatiyaṃ suvidūravidūre.",
  "an4.47:4.9": "Satañca, bhikkhave, dhammo asatañca dhammo;",
  "an4.47:4.10": "idaṃ catutthaṃ suvidūravidūre.",
  "an4.47:4.11": "Imāni kho, bhikkhave, cattāri suvidūravidūrānīti.",
  "an4.47:5.1": "<span class=\"cross\" title=\"^ja537#44 [Mahāsutasomajātaka] | ^ja537#78 [Mahāsutasomajātaka]\" id=\"note156\">*</span> <a class=\"sc\" id=\"2\"></a><a class=\"pts\" id=\"pts2.51\"></a>Nabhañca dūre pathavī ca dūre,",
  "an4.47:5.2": "Pāraṃ samuddassa tadāhu dūre;",
  "an4.47:5.3": "Yato ca verocano abbhudeti,",
  "an4.47:5.4": "Pabhaṅkaro yattha ca atthameti;",
  "an4.47:5.5": "Tato have dūrataraṃ vadanti,",
  "an4.47:5.6": "Satañca dhammaṃ asatañca dhammaṃ.",
  "an4.47:6.1": "Abyāyiko hoti sataṃ samāgamo,",
  "an4.47:6.2": "<span class=\"var\" title=\"yāvampi (bj, s1-3, km, pts1)\" id=\"note157\">Yāvāpi</span> tiṭṭheyya tatheva hoti;",
  "an4.47:6.3": "Khippañhi veti asataṃ samāgamo,",
  "an4.47:6.4": "Tasmā sataṃ dhammo asabbhi ārakā”ti.",
  "an4.47:7.1": "Sattamaṃ."
}