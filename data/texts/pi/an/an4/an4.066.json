  "an4.66:1.1": "Aṅguttara Nikāya 4",
  "an4.66:2.1": "7. Pattakammavagga",
  "an4.66:3.1": "<span class=\"var\" id=\"note215\" title=\"sarāga (puggala) suttaṃ (bj)\">66. Sarāgasutta</span>",
  "an4.66:4.1": "“Cattārome, bhikkhave, puggalā santo saṃvijjamānā lokasmiṃ.",
  "an4.66:4.2": "Katame cattāro?",
  "an4.66:4.3": "Sarāgo, sadoso, samoho, samāno—",
  "an4.66:4.4": "ime kho, bhikkhave, cattāro puggalā santo saṃvijjamānā lokasminti.",
  "an4.66:5.1": "Sārattā rajanīyesu,",
  "an4.66:5.2": "Piyarūpābhinandino;",
  "an4.66:5.3": "<span class=\"var\" title=\"adhamā sattā (bj, s1, s2, km) | adhamasattā (s3, pts1)\" id=\"note216\">Mohena āvutā sattā</span>,",
  "an4.66:5.4": "<span class=\"var\" title=\"bandhā (mr)\" id=\"note217\">Baddhā</span> vaḍḍhenti bandhanaṃ.",
  "an4.66:6.1": "Rāgajaṃ dosajañcāpi,",
  "an4.66:6.2": "mohajaṃ cāpaviddasū;",
  "an4.66:6.3": "Karontākusalaṃ <span class=\"var\" title=\"dhammaṃ (mr)\" id=\"note218\">kammaṃ</span>,",
  "an4.66:6.4": "savighātaṃ dukhudrayaṃ.",
  "an4.66:7.1": "Avijjānivutā posā,",
  "an4.66:7.2": "andhabhūtā acakkhukā;",
  "an4.66:7.3": "Yathā dhammā tathā santā,",
  "an4.66:7.4": "na <span class=\"var\" title=\"nassevanti (bj)\" id=\"note219\">tassevanti</span> maññare”ti.",
  "an4.66:8.1": "Chaṭṭhaṃ."
}