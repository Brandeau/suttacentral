  "an4.42:1.1": "Aṅguttara Nikāya 4",
  "an4.42:2.1": "5. Rohitassavagga",
  "an4.42:3.1": "42. Pañhabyākaraṇasutta",
  "an4.42:4.1": "“Cattārimāni, bhikkhave, <span class=\"var\" title=\"pañhābyākaraṇāni (mr)\" id=\"note144\">pañhabyākaraṇāni</span>.",
  "an4.42:4.2": "Katamāni cattāri?",
  "an4.42:4.3": "Atthi, bhikkhave, pañho ekaṃsabyākaraṇīyo;",
  "an4.42:4.4": "atthi, bhikkhave, pañho vibhajjabyākaraṇīyo;",
  "an4.42:4.5": "atthi, bhikkhave, pañho paṭipucchābyākaraṇīyo;",
  "an4.42:4.6": "atthi, bhikkhave, pañho ṭhapanīyo.",
  "an4.42:4.7": "Imāni kho, bhikkhave, cattāri pañhabyākaraṇānīti.",
  "an4.42:5.1": "Ekaṃsavacanaṃ ekaṃ,",
  "an4.42:5.2": "vibhajjavacanāparaṃ;",
  "an4.42:5.3": "Tatiyaṃ paṭipuccheyya,",
  "an4.42:5.4": "catutthaṃ pana ṭhāpaye.",
  "an4.42:6.1": "Yo ca <span class=\"var\" title=\"nesaṃ (bj, s1-3, km)\" id=\"note145\">tesaṃ</span> tattha tattha,",
  "an4.42:6.2": "jānāti anudhammataṃ;",
  "an4.42:6.3": "Catupañhassa kusalo,",
  "an4.42:6.4": "āhu bhikkhuṃ tathāvidhaṃ.",
  "an4.42:7.1": "Durāsado duppasaho,",
  "an4.42:7.2": "gambhīro duppadhaṃsiyo;",
  "an4.42:7.3": "Atho atthe anatthe ca,",
  "an4.42:7.4": "<span class=\"var\" title=\"ubhayatthassa kovido (s1-3, km)\" id=\"note146\">ubhayassa hoti kovido</span>.",
  "an4.42:8.1": "Anatthaṃ parivajjeti,",
  "an4.42:8.2": "atthaṃ gaṇhāti paṇḍito;",
  "an4.42:8.3": "Atthābhisamayā dhīro,",
  "an4.42:8.4": "paṇḍitoti pavuccatī”ti.",
  "an4.42:9.1": "Dutiyaṃ."
}