  "an4.63:1.1": "Aṅguttara Nikāya 4",
  "an4.63:2.1": "7. Pattakammavagga",
  "an4.63:3.1": "63. Brahmasutta",
  "an4.63:4.1": "<span class=\"cross\" title=\"^an3.31#1 [31. Sabrahmakasutta] | ^it106#1 [Sabrahmakasutta]\" id=\"note207\">*</span> <a class=\"sc\" id=\"1\"></a>“Sabrahmakāni, bhikkhave, tāni kulāni yesaṃ puttānaṃ mātāpitaro ajjhāgāre pūjitā honti.",
  "an4.63:4.2": "Sapubbācariyakāni, bhikkhave, tāni kulāni, yesaṃ puttānaṃ mātāpitaro ajjhāgāre pūjitā honti.",
  "an4.63:4.3": "<span class=\"var\" title=\"sapubbadevāni (s1-3, km)\" id=\"note208\">Sapubbadevatāni</span>, bhikkhave, tāni kulāni yesaṃ puttānaṃ mātāpitaro ajjhāgāre pūjitā honti.",
  "an4.63:4.4": "Sāhuneyyakāni, bhikkhave, tāni kulāni yesaṃ puttānaṃ mātāpitaro ajjhāgāre pūjitā honti.",
  "an4.63:5.1": "Brahmāti, bhikkhave, <span class=\"var\" title=\"mātāpitunnaṃ (bj, pts1)\" id=\"note209\">mātāpitūnaṃ</span> etaṃ adhivacanaṃ.",
  "an4.63:5.2": "Pubbācariyāti, bhikkhave, mātāpitūnaṃ etaṃ adhivacanaṃ.",
  "an4.63:5.3": "<span class=\"var\" title=\"pubbadevāti (bj, s1-3, km)\" id=\"note210\">Pubbadevatāti</span>, bhikkhave, mātāpitūnaṃ etaṃ adhivacanaṃ.",
  "an4.63:5.4": "Āhuneyyāti, bhikkhave, mātāpitūnaṃ etaṃ adhivacanaṃ.",
  "an4.63:5.5": "Taṃ kissa hetu?",
  "an4.63:5.6": "Bahukārā, bhikkhave, mātāpitaro, puttānaṃ āpādakā posakā imassa lokassa dassetāroti.",
  "an4.63:6.1": "<span class=\"cross\" title=\"^an3.31#1 [31. Sabrahmakasutta] | ^it106#1 [Sabrahmakasutta] | ^ja532#90 [Soṇanandajātaka]-766\" id=\"note211\">*</span> <a class=\"sc\" id=\"3\"></a>Brahmāti mātāpitaro,",
  "an4.63:6.2": "pubbācariyāti vuccare;",
  "an4.63:6.3": "Āhuneyyā ca puttānaṃ,",
  "an4.63:6.4": "pajāya anukampakā.",
  "an4.63:7.1": "Tasmā hi ne namasseyya,",
  "an4.63:7.2": "sakkareyya ca paṇḍito;",
  "an4.63:7.3": "Annena atha pānena,",
  "an4.63:7.4": "vatthena sayanena ca;",
  "an4.63:7.5": "Ucchādanena nhāpanena,",
  "an4.63:7.6": "pādānaṃ dhovanena ca.",
  "an4.63:8.1": "Tāya naṃ pāricariyāya,",
  "an4.63:8.2": "mātāpitūsu paṇḍitā;",
  "an4.63:8.3": "Idheva naṃ pasaṃsanti,",
  "an4.63:8.4": "pecca sagge pamodatī”ti.",
  "an4.63:9.1": "Tatiyaṃ."
}