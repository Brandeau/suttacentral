  "an4.44:1.1": "Aṅguttara Nikāya 4",
  "an4.44:2.1": "5. Rohitassavagga",
  "an4.44:3.1": "44. Dutiyakodhagarusutta",
  "an4.44:4.1": "“Cattārome, bhikkhave, asaddhammā.",
  "an4.44:4.2": "Katame cattāro?",
  "an4.44:4.3": "Kodhagarutā na saddhammagarutā, makkhagarutā na saddhammagarutā, lābhagarutā na saddhammagarutā, sakkāragarutā na saddhammagarutā.",
  "an4.44:4.4": "Ime kho, bhikkhave, cattāro asaddhammā.",
  "an4.44:5.1": "Cattārome, bhikkhave, saddhammā.",
  "an4.44:5.2": "Katame cattāro?",
  "an4.44:5.3": "Saddhammagarutā na kodhagarutā, saddhammagarutā na makkhagarutā, saddhammagarutā na lābhagarutā, saddhammagarutā na sakkāragarutā.",
  "an4.44:5.4": "Ime kho, bhikkhave, cattāro saddhammāti.",
  "an4.44:6.1": "Kodhamakkhagaru bhikkhu,",
  "an4.44:6.2": "lābhasakkāragāravo;",
  "an4.44:6.3": "Sukhette pūtibījaṃva,",
  "an4.44:6.4": "saddhamme na virūhati.",
  "an4.44:7.1": "Ye ca saddhammagaruno,",
  "an4.44:7.2": "vihaṃsu viharanti ca;",
  "an4.44:7.3": "Te ve dhamme virūhanti,",
  "an4.44:7.4": "<span class=\"var\" title=\"snehamanvāyamivosadhāti (bj, s1-3, km, pts1)\" id=\"note147\">snehānvayamivosadhā”ti</span>.",
  "an4.44:8.1": "Catutthaṃ."
}