  "sn36.1:1.1": "Saṃyutta Nikāya 36",
  "sn36.1:2.1": "<span class=\\\"var\\\" title=\\\"paṭhamakasagāthavaggo (s1-3) | paṭhamasagāthavaggo (pts1)\\\" id=\\\"note353\\\">1. Sagāthāvagga</span>",
  "sn36.1:3.1": "1. Samādhisutta",
  "sn36.1:4.1": "“Tisso imā, bhikkhave, vedanā.",
  "sn36.1:4.2": "Katamā tisso?",
  "sn36.1:4.3": "Sukhā vedanā, dukkhā vedanā, adukkhamasukhā vedanā—",
  "sn36.1:4.4": "imā kho, bhikkhave, tisso vedanāti.",
  "sn36.1:5.1": "Samāhito sampajāno,",
  "sn36.1:5.2": "sato buddhassa sāvako;",
  "sn36.1:5.3": "Vedanā ca pajānāti,",
  "sn36.1:5.4": "vedanānañca sambhavaṃ.",
  "sn36.1:6.1": "Yattha cetā nirujjhanti,",
  "sn36.1:6.2": "maggañca khayagāminaṃ;",
  "sn36.1:6.3": "Vedanānaṃ khayā bhikkhu,",
  "sn36.1:6.4": "nicchāto parinibbuto”ti.",
  "sn36.1:7.1": "Paṭhamaṃ."
}