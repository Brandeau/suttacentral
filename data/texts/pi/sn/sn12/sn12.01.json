  "sn12.1:1.1": "Saṃyutta Nikāya 12",
  "sn12.1:2.1": "<span class=\\\"var\\\" title=\\\"abhisamayasaṃyuttaṃ (s1-3)\\\" id=\\\"note1\\\">1. Buddhavagga</span>",
  "sn12.1:3.1": "<span class=\\\"var\\\" title=\\\"desanā (pts1-2)\\\" id=\\\"note2\\\">1. Paṭiccasamuppādasutta</span>",
  "sn12.1:4.1": "<span class=\\\"evam\\\">Evaṃ me sutaṃ—​</span>",
  "sn12.1:4.2": "ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "sn12.1:4.3": "Tatra kho bhagavā bhikkhū āmantesi:",
  "sn12.1:4.4": "“bhikkhavo”ti.",
  "sn12.1:4.5": "“Bhadante”ti te bhikkhū bhagavato paccassosuṃ.",
  "sn12.1:4.6": "Bhagavā etadavoca:",
  "sn12.1:4.7": "“paṭiccasamuppādaṃ vo, bhikkhave, desessāmi.",
  "sn12.1:4.8": "Taṃ suṇātha, sādhukaṃ manasi karotha, bhāsissāmī”ti.",
  "sn12.1:4.9": "“Evaṃ, bhante”ti kho te bhikkhū bhagavato paccassosuṃ.",
  "sn12.1:4.10": "Bhagavā etadavoca:",
  "sn12.1:5.1": "“Katamo ca, bhikkhave, paṭiccasamuppādo?<span class=\\\"cross\\\" title=\\\"^pi-tv-kd1#2 [Mahākhandhaka/ Bodhikathā]\\\" id=\\\"note3\\\">*</span>",
  "sn12.1:5.2": "Avijjāpaccayā, bhikkhave, saṅkhārā;",
  "sn12.1:5.3": "saṅkhārapaccayā viññāṇaṃ;",
  "sn12.1:5.4": "viññāṇapaccayā nāmarūpaṃ;",
  "sn12.1:5.5": "nāmarūpapaccayā saḷāyatanaṃ;",
  "sn12.1:5.6": "saḷāyatanapaccayā phasso;",
  "sn12.1:5.7": "phassapaccayā vedanā;",
  "sn12.1:5.8": "vedanāpaccayā taṇhā;",
  "sn12.1:5.9": "taṇhāpaccayā upādānaṃ;",
  "sn12.1:5.10": "upādānapaccayā bhavo;",
  "sn12.1:5.11": "bhavapaccayā jāti;",
  "sn12.1:5.12": "jātipaccayā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā sambhavanti.",
  "sn12.1:5.13": "Evametassa kevalassa dukkhakkhandhassa samudayo hoti.",
  "sn12.1:5.14": "Ayaṃ vuccati, bhikkhave, paṭiccasamuppādo.",
  "sn12.1:6.1": "Avijjāya tveva asesavirāganirodhā saṅkhāranirodho;",
  "sn12.1:6.2": "saṅkhāranirodhā viññāṇanirodho;",
  "sn12.1:6.3": "viññāṇanirodhā nāmarūpanirodho;",
  "sn12.1:6.4": "nāmarūpanirodhā saḷāyatananirodho;",
  "sn12.1:6.5": "saḷāyatananirodhā phassanirodho;",
  "sn12.1:6.6": "phassanirodhā vedanānirodho;",
  "sn12.1:6.7": "vedanānirodhā taṇhānirodho;",
  "sn12.1:6.8": "taṇhānirodhā upādānanirodho;",
  "sn12.1:6.9": "upādānanirodhā bhavanirodho;",
  "sn12.1:6.10": "bhavanirodhā jātinirodho;",
  "sn12.1:6.11": "jātinirodhā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā nirujjhanti.",
  "sn12.1:6.12": "Evametassa kevalassa dukkhakkhandhassa nirodho hotī”ti.",
  "sn12.1:6.13": "Idamavoca bhagavā.",
  "sn12.1:6.14": "Attamanā te bhikkhū bhagavato bhāsitaṃ abhinandunti.",
  "sn12.1:7.1": "Paṭhamaṃ."
}