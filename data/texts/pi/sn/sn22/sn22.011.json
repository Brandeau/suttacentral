  "sn22.11:1.1": "Saṃyutta Nikāya 22",
  "sn22.11:2.1": "1. Nakulapituvagga",
  "sn22.11:3.1": "<span class=\\\"var\\\" title=\\\"tatiyaatītānāgatasuttaṃ (bj) | atītānāgatapaccuppanna 3 (pts1)\\\" id=\\\"note35\\\">11. Kālattayaanattasutta</span>",
  "sn22.11:4.1": "Sāvatthinidānaṃ.",
  "sn22.11:4.2": "“Rūpaṃ, bhikkhave, anattā atītānāgataṃ;",
  "sn22.11:4.3": "ko pana vādo paccuppannassa.",
  "sn22.11:4.4": "Evaṃ passaṃ, bhikkhave, sutavā ariyasāvako atītasmiṃ rūpasmiṃ anapekkho hoti;",
  "sn22.11:4.5": "anāgataṃ rūpaṃ nābhinandati;",
  "sn22.11:4.6": "paccuppannassa rūpassa nibbidāya virāgāya nirodhāya paṭipanno hoti.",
  "sn22.11:4.7": "Vedanā anattā …",
  "sn22.11:4.8": "saññā anattā …",
  "sn22.11:4.9": "saṅkhārā anattā …",
  "sn22.11:4.10": "viññāṇaṃ anattā atītānāgataṃ;",
  "sn22.11:4.11": "ko pana vādo paccuppannassa.",
  "sn22.11:4.12": "Evaṃ passaṃ, bhikkhave, sutavā ariyasāvako atītasmiṃ viññāṇasmiṃ anapekkho hoti;",
  "sn22.11:4.13": "anāgataṃ viññāṇaṃ nābhinandati;",
  "sn22.11:4.14": "paccuppannassa viññāṇassa nibbidāya virāgāya nirodhāya paṭipanno hotī”ti.",
  "sn22.11:5.1": "Ekādasamaṃ.",
  "sn22.11:6.1": "Nakulapituvaggo paṭhamo.",
  "sn22.11:7.1": "Nakulapitā devadahā,",
  "sn22.11:7.2": "Dvepi hāliddikāni ca;",
  "sn22.11:7.3": "Samādhipaṭisallāṇā,",
  "sn22.11:7.4": "Upādāparitassanā duve;",
  "sn22.11:7.5": "Atītānāgatapaccuppannā,",
  "sn22.11:7.6": "Vaggo tena pavuccati."
}