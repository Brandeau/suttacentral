  "sn22.76:1.1": "Saṃyutta Nikāya 22",
  "sn22.76:2.1": "8. Khajjanīyavagga",
  "sn22.76:3.1": "76. Arahantasutta",
  "sn22.76:4.1": "Sāvatthinidānaṃ.",
  "sn22.76:4.2": "“Rūpaṃ, bhikkhave, aniccaṃ.",
  "sn22.76:4.3": "Yadaniccaṃ taṃ dukkhaṃ;",
  "sn22.76:4.4": "yaṃ dukkhaṃ tadanattā;",
  "sn22.76:4.5": "yadanattā taṃ ‘netaṃ mama, nesohamasmi, na meso attā’ti evametaṃ yathābhūtaṃ sammappaññāya daṭṭhabbaṃ.",
  "sn22.76:4.6": "Vedanā …",
  "sn22.76:4.7": "saññā …",
  "sn22.76:4.8": "saṅkhārā …",
  "sn22.76:4.9": "viññāṇaṃ aniccaṃ.",
  "sn22.76:4.10": "Yadaniccaṃ taṃ dukkhaṃ;",
  "sn22.76:4.11": "yaṃ dukkhaṃ tadanattā;",
  "sn22.76:4.12": "yadanattā taṃ ‘netaṃ mama, nesohamasmi, na meso attā’ti evametaṃ yathābhūtaṃ sammappaññāya daṭṭhabbaṃ.",
  "sn22.76:5.1": "Evaṃ passaṃ, bhikkhave, sutavā ariyasāvako rūpasmimpi nibbindati, vedanāyapi …",
  "sn22.76:5.2": "saññāyapi …",
  "sn22.76:5.3": "saṅkhāresupi …",
  "sn22.76:5.4": "viññāṇasmimpi nibbindati.",
  "sn22.76:5.5": "Nibbindaṃ virajjati;",
  "sn22.76:5.6": "virāgā vimuccati.",
  "sn22.76:5.7": "Vimuttasmiṃ vimuttamiti ñāṇaṃ hoti.",
  "sn22.76:5.8": "‘Khīṇā jāti, vusitaṃ brahmacariyaṃ, kataṃ karaṇīyaṃ, nāparaṃ itthattāyā’ti pajānāti.",
  "sn22.76:5.9": "Yāvatā, bhikkhave, sattāvāsā, yāvatā bhavaggaṃ, ete aggā, ete seṭṭhā lokasmiṃ yadidaṃ arahanto”ti.",
  "sn22.76:6.1": "Idamavoca bhagavā.",
  "sn22.76:6.2": "Idaṃ vatvāna sugato athāparaṃ etadavoca satthā:",
  "sn22.76:7.1": "“Sukhino vata arahanto,",
  "sn22.76:7.2": "taṇhā tesaṃ na vijjati;",
  "sn22.76:7.3": "Asmimāno samucchinno,",
  "sn22.76:7.4": "mohajālaṃ padālitaṃ.",
  "sn22.76:8.1": "Anejaṃ te anuppattā,",
  "sn22.76:8.2": "cittaṃ tesaṃ anāvilaṃ;",
  "sn22.76:8.3": "Loke anupalittā te,",
  "sn22.76:8.4": "brahmabhūtā anāsavā.",
  "sn22.76:9.1": "Pañcakkhandhe pariññāya,",
  "sn22.76:9.2": "satta saddhammagocarā;",
  "sn22.76:9.3": "Pasaṃsiyā sappurisā,",
  "sn22.76:9.4": "puttā buddhassa orasā.",
  "sn22.76:10.1": "Sattaratanasampannā,",
  "sn22.76:10.2": "Tīsu sikkhāsu sikkhitā;",
  "sn22.76:10.3": "Anuvicaranti mahāvīrā,",
  "sn22.76:10.4": "Pahīnabhayabheravā.",
  "sn22.76:11.1": "Dasahaṅgehi sampannā,",
  "sn22.76:11.2": "mahānāgā samāhitā;",
  "sn22.76:11.3": "Ete kho seṭṭhā lokasmiṃ,",
  "sn22.76:11.4": "taṇhā tesaṃ na vijjati.",
  "sn22.76:12.1": "Asekhañāṇamuppannaṃ,",
  "sn22.76:12.2": "<span class=\\\"var\\\" title=\\\"antimassa (mr)\\\" id=\\\"note109\\\">antimoyaṃ</span> samussayo;",
  "sn22.76:12.3": "Yo sāro brahmacariyassa,",
  "sn22.76:12.4": "tasmiṃ aparapaccayā.",
  "sn22.76:13.1": "Vidhāsu na vikampanti,",
  "sn22.76:13.2": "vippamuttā punabbhavā;",
  "sn22.76:13.3": "Dantabhūmimanuppattā,",
  "sn22.76:13.4": "te loke vijitāvino.",
  "sn22.76:14.1": "Uddhaṃ tiriyaṃ apācīnaṃ,",
  "sn22.76:14.2": "nandī tesaṃ na vijjati;",
  "sn22.76:14.3": "Nadanti te sīhanādaṃ,",
  "sn22.76:14.4": "buddhā loke anuttarā”ti.",
  "sn22.76:15.1": "Catutthaṃ."
}