  "sn22.138:1.1": "Saṃyutta Nikāya 22",
  "sn22.138:2.1": "14. Kukkuḷavagga",
  "sn22.138:3.1": "138. Dutiyaaniccasutta",
  "sn22.138:4.1": "Sāvatthinidānaṃ.",
  "sn22.138:4.2": "“Yaṃ, bhikkhave, aniccaṃ;",
  "sn22.138:4.3": "tatra vo rāgo pahātabbo.",
  "sn22.138:4.4": "Kiñca, bhikkhave, aniccaṃ?",
  "sn22.138:4.5": "Rūpaṃ, bhikkhave, aniccaṃ;",
  "sn22.138:4.6": "tatra vo rāgo pahātabbo.",
  "sn22.138:4.7": "Vedanā aniccā …",
  "sn22.138:4.8": "saññā …",
  "sn22.138:4.9": "saṅkhārā …",
  "sn22.138:4.10": "viññāṇaṃ aniccaṃ;",
  "sn22.138:4.11": "tatra vo rāgo pahātabbo.",
  "sn22.138:4.12": "Yaṃ, bhikkhave, aniccaṃ;",
  "sn22.138:4.13": "tatra vo rāgo pahātabbo”ti.",
  "sn22.138:5.1": "Tatiyaṃ."
}