  "sn22.32:1.1": "Saṃyutta Nikāya 22",
  "sn22.32:2.1": "3. Bhāravagga",
  "sn22.32:3.1": "32. Pabhaṅgusutta",
  "sn22.32:4.1": "Sāvatthinidānaṃ.",
  "sn22.32:4.2": "“Pabhaṅguñca, bhikkhave, desessāmi appabhaṅguñca.",
  "sn22.32:4.3": "Taṃ suṇātha.",
  "sn22.32:4.4": "Kiñca, bhikkhave, pabhaṅgu, kiṃ appabhaṅgu?",
  "sn22.32:4.5": "Rūpaṃ, bhikkhave, pabhaṅgu.",
  "sn22.32:4.6": "Yo tassa nirodho vūpasamo atthaṅgamo, idaṃ appabhaṅgu.",
  "sn22.32:4.7": "Vedanā pabhaṅgu.",
  "sn22.32:4.8": "Yo tassā nirodho vūpasamo atthaṅgamo, idaṃ appabhaṅgu.",
  "sn22.32:4.9": "Saññā pabhaṅgu …",
  "sn22.32:4.10": "saṅkhārā pabhaṅgu.",
  "sn22.32:4.11": "Yo tesaṃ nirodho vūpasamo atthaṅgamo, idaṃ appabhaṅgu.",
  "sn22.32:4.12": "Viññāṇaṃ pabhaṅgu.",
  "sn22.32:4.13": "Yo tassa nirodho vūpasamo atthaṅgamo, idaṃ appabhaṅgū”ti.",
  "sn22.32:5.1": "Ekādasamaṃ.",
  "sn22.32:6.1": "Bhāravaggo tatiyo.",
  "sn22.32:7.1": "Bhāraṃ pariññaṃ abhijānaṃ,",
  "sn22.32:7.2": "chandarāgaṃ catutthakaṃ;",
  "sn22.32:7.3": "Assādā ca tayo vuttā,",
  "sn22.32:7.4": "abhinandanamaṭṭhamaṃ;",
  "sn22.32:7.5": "Uppādaṃ aghamūlañca,",
  "sn22.32:7.6": "ekādasamo pabhaṅgūti."
}