  "sn45.21:1.1": "Saṃyutta Nikāya 45",
  "sn45.21:2.1": "3. Micchattavagga",
  "sn45.21:3.1": "21. Micchattasutta",
  "sn45.21:4.1": "Sāvatthinidānaṃ.",
  "sn45.21:4.2": "“Micchattañca vo, bhikkhave, desessāmi, sammattañca.",
  "sn45.21:4.3": "Taṃ suṇātha.",
  "sn45.21:4.4": "Katamañca, bhikkhave, micchattaṃ?",
  "sn45.21:4.5": "Seyyathidaṃ—",
  "sn45.21:4.6": "micchādiṭṭhi … pe …",
  "sn45.21:4.7": "micchāsamādhi.",
  "sn45.21:4.8": "Idaṃ vuccati, bhikkhave, micchattaṃ.",
  "sn45.21:4.9": "Katamañca, bhikkhave, sammattaṃ?",
  "sn45.21:4.10": "Seyyathidaṃ—",
  "sn45.21:4.11": "sammādiṭṭhi … pe …",
  "sn45.21:4.12": "sammāsamādhi.",
  "sn45.21:4.13": "Idaṃ vuccati, bhikkhave, sammattan”ti.",
  "sn45.21:5.1": "Paṭhamaṃ."
}