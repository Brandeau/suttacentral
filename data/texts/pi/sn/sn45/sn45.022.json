  "sn45.22:1.1": "Saṃyutta Nikāya 45",
  "sn45.22:2.1": "3. Micchattavagga",
  "sn45.22:3.1": "22. Akusaladhammasutta",
  "sn45.22:4.1": "Sāvatthinidānaṃ.",
  "sn45.22:4.2": "“Akusale ca kho, bhikkhave, dhamme desessāmi, kusale ca dhamme.",
  "sn45.22:4.3": "Taṃ suṇātha.",
  "sn45.22:4.4": "Katame ca, bhikkhave, akusalā dhammā?",
  "sn45.22:4.5": "Seyyathidaṃ—",
  "sn45.22:4.6": "micchādiṭṭhi … pe …",
  "sn45.22:4.7": "micchāsamādhi.",
  "sn45.22:4.8": "Ime vuccanti, bhikkhave, akusalā dhammā.",
  "sn45.22:4.9": "Katame ca, bhikkhave, kusalā dhammā?",
  "sn45.22:4.10": "Seyyathidaṃ—",
  "sn45.22:4.11": "sammādiṭṭhi … pe …",
  "sn45.22:4.12": "sammāsamādhi.",
  "sn45.22:4.13": "Ime vuccanti, bhikkhave, kusalā dhammā”ti.",
  "sn45.22:5.1": "Dutiyaṃ."
}