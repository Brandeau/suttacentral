  "sn10.5:1.1": "Saṃyutta Nikāya 10",
  "sn10.5:2.1": "1. Indakavagga",
  "sn10.5:3.1": "5. Sānusutta",
  "sn10.5:4.1": "Ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "sn10.5:4.2": "Tena kho pana samayena aññatarissā upāsikāya sānu nāma putto yakkhena gahito hoti.",
  "sn10.5:4.3": "Atha kho sā upāsikā paridevamānā tāyaṃ velāyaṃ imā gāthāyo abhāsi:",
  "sn10.5:5.1": "“Cātuddasiṃ pañcadasiṃ,",
  "sn10.5:5.2": "yā ca pakkhassa aṭṭhamī;",
  "sn10.5:5.3": "Pāṭihāriyapakkhañca,",
  "sn10.5:5.4": "aṭṭhaṅgasusamāgataṃ.",
  "sn10.5:6.1": "Uposathaṃ upavasanti,",
  "sn10.5:6.2": "brahmacariyaṃ caranti ye;",
  "sn10.5:6.3": "Na tehi yakkhā kīḷanti,",
  "sn10.5:6.4": "iti me arahataṃ sutaṃ;",
  "sn10.5:6.5": "Sā dāni ajja passāmi,",
  "sn10.5:6.6": "yakkhā kīḷanti sānunā”ti.",
  "sn10.5:7.1": "“Cātuddasiṃ pañcadasiṃ,",
  "sn10.5:7.2": "yā ca pakkhassa aṭṭhamī;",
  "sn10.5:7.3": "Pāṭihāriyapakkhañca,",
  "sn10.5:7.4": "aṭṭhaṅgasusamāgataṃ;",
  "sn10.5:8.1": "Uposathaṃ upavasanti,",
  "sn10.5:8.2": "brahmacariyaṃ caranti ye.",
  "sn10.5:8.3": "Na tehi yakkhā kīḷanti,",
  "sn10.5:8.4": "sāhu te arahataṃ sutaṃ;",
  "sn10.5:9.1": "Sānuṃ pabuddhaṃ vajjāsi,",
  "sn10.5:9.2": "yakkhānaṃ vacanaṃ idaṃ;",
  "sn10.5:9.3": "Mākāsi pāpakaṃ kammaṃ,",
  "sn10.5:9.4": "āvi vā yadi vā raho.",
  "sn10.5:10.1": "<span class=\"var\" title=\"yañceva (bj) | saceva (s1-3, km, pts1, mr)\" id=\"note489\">Sace ca</span> pāpakaṃ kammaṃ,",
  "sn10.5:10.2": "karissasi karosi vā;",
  "sn10.5:10.3": "Na te dukkhā pamutyatthi,",
  "sn10.5:10.4": "uppaccāpi palāyato”ti.",
  "sn10.5:11.1": "“Mataṃ vā amma rodanti,",
  "sn10.5:11.2": "yo vā jīvaṃ na dissati;",
  "sn10.5:11.3": "Jīvantaṃ amma passantī,",
  "sn10.5:11.4": "kasmā maṃ amma rodasī”ti.",
  "sn10.5:12.1": "“Mataṃ vā putta rodanti,",
  "sn10.5:12.2": "yo vā jīvaṃ na dissati;",
  "sn10.5:12.3": "Yo ca kāme cajitvāna,",
  "sn10.5:12.4": "punarāgacchate idha;",
  "sn10.5:12.5": "Taṃ vāpi putta rodanti,",
  "sn10.5:12.6": "puna jīvaṃ mato hi so.",
  "sn10.5:13.1": "Kukkuḷā ubbhato tāta,",
  "sn10.5:13.2": "<span class=\"var\" title=\"kukkulā (si) | kukkulaṃ (s3)\" id=\"note491\">kukkuḷaṃ</span> patitumicchasi;",
  "sn10.5:13.3": "Narakā ubbhato tāta,",
  "sn10.5:13.4": "narakaṃ patitumicchasi.",
  "sn10.5:14.1": "Abhidhāvatha bhaddante,",
  "sn10.5:14.2": "kassa ujjhāpayāmase;",
  "sn10.5:14.3": "Ādittā <span class=\"var\" title=\"nīhaṭaṃ (bj) | nibbhataṃ (s1-3, km, mr) | nibhataṃ (pts1, mr)\" id=\"note492\">nīhataṃ</span> bhaṇḍaṃ,",
  "sn10.5:14.4": "puna ḍayhitumicchasī”ti."
}