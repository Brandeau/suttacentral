  "sn11.8:1.1": "Saṃyutta Nikāya 11",
  "sn11.8:2.1": "1. Paṭhamavagga",
  "sn11.8:3.1": "<span class=\\\"var\\\" title=\\\"virocanaasurindasuttaṃ (s1-3, pts2) | virocana-asurindo (attho) (pts1)\\\" id=\\\"note526\\\">8. Verocanaasurindasutta</span>",
  "sn11.8:4.1": "Sāvatthiyaṃ jetavane.",
  "sn11.8:4.2": "Tena kho pana samayena bhagavā divāvihāragato hoti paṭisallīno.",
  "sn11.8:4.3": "Atha kho sakko ca devānamindo verocano ca asurindo yena bhagavā tenupasaṅkamiṃsu;",
  "sn11.8:4.4": "upasaṅkamitvā paccekaṃ dvārabāhaṃ nissāya aṭṭhaṃsu.",
  "sn11.8:4.5": "Atha kho verocano asurindo bhagavato santike imaṃ gāthaṃ abhāsi:",
  "sn11.8:5.1": "“Vāyametheva puriso,",
  "sn11.8:5.2": "yāva atthassa nipphadā;",
  "sn11.8:5.3": "<span class=\\\"var\\\" title=\\\"nipphannasobhino (bj, pts2) | nippannasobhaṇo (pts1) | nipphannasobhaṇo (mr)\\\" id=\\\"note527\\\">Nipphannasobhano</span> <span class=\\\"var\\\" title=\\\"atthā (bj, pts2)\\\" id=\\\"note528\\\">attho</span>,",
  "sn11.8:5.4": "verocanavaco idan”ti.",
  "sn11.8:6.1": "“Vāyametheva puriso,",
  "sn11.8:6.2": "yāva atthassa nipphadā;",
  "sn11.8:6.3": "<span class=\\\"var\\\" title=\\\"nipphannasobhino atthā (bj, s1, km, pts2) | nippannasobhaṇo attho (pts1)\\\" id=\\\"note529\\\">Nipphannasobhano attho</span>,",
  "sn11.8:6.4": "khantyā bhiyyo na vijjatī”ti.",
  "sn11.8:7.1": "“Sabbe sattā atthajātā,",
  "sn11.8:7.2": "tattha tattha yathārahaṃ;",
  "sn11.8:7.3": "Saṃyogaparamā tveva,",
  "sn11.8:7.4": "sambhogā sabbapāṇinaṃ;",
  "sn11.8:7.5": "Nipphannasobhano attho,",
  "sn11.8:7.6": "verocanavaco idan”ti.",
  "sn11.8:8.1": "“Sabbe sattā atthajātā,",
  "sn11.8:8.2": "tattha tattha yathārahaṃ;",
  "sn11.8:8.3": "Saṃyogaparamā tveva,",
  "sn11.8:8.4": "sambhogā sabbapāṇinaṃ;",
  "sn11.8:8.5": "Nipphannasobhano attho,",
  "sn11.8:8.6": "khantyā bhiyyo na vijjatī”ti."
}