  "sn23.34:1.1": "Saṃyutta Nikāya 23",
  "sn23.34:2.1": "3. Āyācanavagga",
  "sn23.34:3.1": "34. Nirodhadhammasutta",
  "sn23.34:4.1": "Sāvatthinidānaṃ.",
  "sn23.34:4.2": "Āyasmā rādho bhagavantaṃ etadavoca:",
  "sn23.34:4.3": "“sādhu me, bhante, bhagavā saṅkhittena dhammaṃ desetu, yamahaṃ bhagavato dhammaṃ sutvā eko vūpakaṭṭho appamatto ātāpī pahitatto vihareyyan”ti.",
  "sn23.34:5.1": "“Yo kho, rādha, nirodhadhammo;",
  "sn23.34:5.2": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo.",
  "sn23.34:5.3": "Ko ca, rādha, nirodhadhammo?",
  "sn23.34:5.4": "Rūpaṃ kho, rādha, nirodhadhammo;",
  "sn23.34:5.5": "tatra te chando pahātabbo … pe …",
  "sn23.34:5.6": "vedanā nirodhadhammo;",
  "sn23.34:5.7": "tatra te chando pahātabbo … pe …",
  "sn23.34:5.8": "saññā nirodhadhammo;",
  "sn23.34:5.9": "tatra te chando pahātabbo … pe …",
  "sn23.34:5.10": "saṅkhārā nirodhadhammo;",
  "sn23.34:5.11": "tatra te chando pahātabbo … pe …",
  "sn23.34:5.12": "viññāṇaṃ nirodhadhammo;",
  "sn23.34:5.13": "tatra te chando pahātabbo … pe …",
  "sn23.34:5.14": "yo kho, rādha, nirodhadhammo;",
  "sn23.34:5.15": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo”<span class=\\\"var\\\" title=\\\"bj potthake pana imasmiṃ vagge chattiṃsa suttāni vibhattāni ekekaṃ suttaṃ tīṇi tīṇi katvā, evaṃ\\\" id=\\\"note246\\\">ti</span>.",
  "sn23.34:6.1": "Āyācanavaggo tatiyo.",
  "sn23.34:7.1": "Māro ca māradhammo ca,",
  "sn23.34:7.2": "Aniccena apare duve;",
  "sn23.34:7.3": "Dukkhena ca duve vuttā,",
  "sn23.34:7.4": "Anattena tatheva ca;",
  "sn23.34:7.5": "Khayavayasamudayaṃ,",
  "sn23.34:7.6": "Nirodhadhammena dvādasāti."
}