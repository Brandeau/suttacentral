  "sn23.46:1.1": "Saṃyutta Nikāya 23",
  "sn23.46:2.1": "4. Upanisinnavagga",
  "sn23.46:3.1": "46. Nirodhadhammasutta",
  "sn23.46:4.1": "Sāvatthinidānaṃ.",
  "sn23.46:4.2": "Ekamantaṃ nisinnaṃ kho āyasmantaṃ rādhaṃ bhagavā etadavoca:",
  "sn23.46:4.3": "“yo kho, rādha, nirodhadhammo;",
  "sn23.46:4.4": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo.",
  "sn23.46:4.5": "Ko ca, rādha, nirodhadhammo?",
  "sn23.46:4.6": "Rūpaṃ kho, rādha, nirodhadhammo;",
  "sn23.46:4.7": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo.",
  "sn23.46:4.8": "Vedanā … pe …",
  "sn23.46:4.9": "saññā … pe …",
  "sn23.46:4.10": "saṅkhārā … pe …",
  "sn23.46:4.11": "viññāṇaṃ nirodhadhammo;",
  "sn23.46:4.12": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo.",
  "sn23.46:4.13": "Yo kho, rādha, nirodhadhammo;",
  "sn23.46:4.14": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo”ti.",
  "sn23.46:5.1": "Upanisinnavaggo catuttho.",
  "sn23.46:6.1": "Māro ca māradhammo ca,",
  "sn23.46:6.2": "Aniccena apare duve;",
  "sn23.46:6.3": "Dukkhena ca duve vuttā,",
  "sn23.46:6.4": "Anattena tatheva ca;",
  "sn23.46:6.5": "Khayavayasamudayaṃ,",
  "sn23.46:6.6": "Nirodhadhammena dvādasāti.",
  "sn23.46:7.1": "Rādhasaṃyuttaṃ samattaṃ."
}