  "sn23.22:1.1": "Saṃyutta Nikāya 23",
  "sn23.22:2.1": "2. Dutiyamāravagga",
  "sn23.22:3.1": "22. Nirodhadhammasutta",
  "sn23.22:4.1": "Sāvatthinidānaṃ.",
  "sn23.22:4.2": "Ekamantaṃ nisinno kho āyasmā rādho bhagavantaṃ etadavoca:",
  "sn23.22:4.3": "“‘nirodhadhammo, nirodhadhammo’ti, bhante, vuccati.",
  "sn23.22:4.4": "Katamo nu kho, bhante, nirodhadhammo”ti?",
  "sn23.22:4.5": "“Rūpaṃ kho, rādha, nirodhadhammo, vedanā nirodhadhammo, saññā nirodhadhammo, saṅkhārā nirodhadhammo, viññāṇaṃ nirodhadhammo.",
  "sn23.22:4.6": "Evaṃ passaṃ … pe …",
  "sn23.22:4.7": "nāparaṃ itthattāyāti pajānātī”ti.",
  "sn23.22:5.1": "Dvādasamaṃ.",
  "sn23.22:6.1": "Dutiyamāravaggo.",
  "sn23.22:7.1": "Māro ca māradhammo ca,",
  "sn23.22:7.2": "Aniccena apare duve;",
  "sn23.22:7.3": "Dukkhena ca duve vuttā,",
  "sn23.22:7.4": "<span class=\\\"var\\\" title=\\\"anattehi (s1-3, km, pts1)\\\" id=\\\"note243\\\">Anattena</span> tatheva ca;",
  "sn23.22:7.5": "Khayavayasamudayaṃ,",
  "sn23.22:7.6": "Nirodhadhammena dvādasāti."
}