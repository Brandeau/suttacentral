  "sn23.35-45:1.1": "Saṃyutta Nikāya 23",
  "sn23.35-45:2.1": "4. Upanisinnavagga",
  "sn23.35-45:3.1": "35–​45. Mārādisuttaekādasaka",
  "sn23.35-45:4.1": "Sāvatthinidānaṃ.",
  "sn23.35-45:4.2": "Ekamantaṃ nisinnaṃ kho āyasmantaṃ rādhaṃ bhagavā etadavoca:",
  "sn23.35-45:4.3": "“yo kho, rādha, māro;",
  "sn23.35-45:4.4": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo.",
  "sn23.35-45:4.5": "Ko ca, rādha, māro?",
  "sn23.35-45:4.6": "Rūpaṃ kho, rādha, māro;",
  "sn23.35-45:4.7": "tatra te chando pahātabbo … pe …",
  "sn23.35-45:4.8": "viññāṇaṃ māro;",
  "sn23.35-45:4.9": "tatra te chando pahātabbo … pe …",
  "sn23.35-45:4.10": "yo kho, rādha, māro;",
  "sn23.35-45:4.11": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo”ti.",
  "sn23.35-45:5.1": "“Yo kho, rādha, māradhammo;",
  "sn23.35-45:5.2": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo … pe ….",
  "sn23.35-45:5.3": "<span class=\\\"brnum\\\">(2)</span>",
  "sn23.35-45:6.1": "“Yaṃ kho, rādha, aniccaṃ … pe ….",
  "sn23.35-45:6.2": "<span class=\\\"brnum\\\">(3)</span>",
  "sn23.35-45:7.1": "“Yo kho, rādha, aniccadhammo … pe ….",
  "sn23.35-45:7.2": "<span class=\\\"brnum\\\">(4)</span>",
  "sn23.35-45:8.1": "“Yaṃ kho, rādha, dukkhaṃ … pe ….",
  "sn23.35-45:8.2": "<span class=\\\"brnum\\\">(5)</span>",
  "sn23.35-45:9.1": "“Yo kho, rādha, dukkhadhammo … pe ….",
  "sn23.35-45:9.2": "<span class=\\\"brnum\\\">(6)</span>",
  "sn23.35-45:10.1": "“Yo kho, rādha, anattā … pe ….",
  "sn23.35-45:10.2": "<span class=\\\"brnum\\\">(7)</span>",
  "sn23.35-45:11.1": "“Yo kho, rādha, anattadhammo … pe ….",
  "sn23.35-45:11.2": "<span class=\\\"brnum\\\">(8)</span>",
  "sn23.35-45:12.1": "“Yo kho, rādha, khayadhammo … pe ….",
  "sn23.35-45:12.2": "<span class=\\\"brnum\\\">(9)</span>",
  "sn23.35-45:13.1": "“Yo kho, rādha, vayadhammo … pe ….",
  "sn23.35-45:13.2": "<span class=\\\"brnum\\\">(10)</span>",
  "sn23.35-45:14.1": "“Yo kho, rādha, samudayadhammo;",
  "sn23.35-45:14.2": "tatra te chando pahātabbo, rāgo pahātabbo, chandarāgo pahātabbo … pe ….",
  "sn23.35-45:14.3": "<span class=\\\"brnum\\\">(11)</span>"
}