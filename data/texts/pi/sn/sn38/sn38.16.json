  "sn38.16:1.1": "Saṃyutta Nikāya 38",
  "sn38.16:2.1": "1. Jambukhādakavagga",
  "sn38.16:3.1": "16. Dukkarapañhāsutta",
  "sn38.16:4.1": "“Kiṃ nu kho, āvuso sāriputta, imasmiṃ dhammavinaye dukkaran”ti?",
  "sn38.16:4.2": "“Pabbajjā kho, āvuso, imasmiṃ dhammavinaye dukkarā”ti.",
  "sn38.16:4.3": "“Pabbajitena panāvuso, kiṃ dukkaran”ti?",
  "sn38.16:4.4": "“Pabbajitena kho, āvuso, abhirati dukkarā”ti.",
  "sn38.16:4.5": "“Abhiratena panāvuso, kiṃ dukkaran”ti?",
  "sn38.16:4.6": "“Abhiratena kho, āvuso, dhammānudhammappaṭipatti dukkarā”ti.",
  "sn38.16:4.7": "“Kīvaciraṃ panāvuso, dhammānudhammappaṭipanno bhikkhu arahaṃ assā”ti?",
  "sn38.16:4.8": "“Naciraṃ, āvuso”ti.",
  "sn38.16:5.1": "Soḷasamaṃ.",
  "sn38.16:6.1": "Jambukhādakasaṃyuttaṃ samattaṃ.",
  "sn38.16:7.1": "Nibbānaṃ arahattañca,",
  "sn38.16:7.2": "dhammavādī kimatthiyaṃ;",
  "sn38.16:7.3": "Assāso paramassāso,",
  "sn38.16:7.4": "vedanā āsavāvijjā;",
  "sn38.16:7.5": "Taṇhā oghā upādānaṃ,",
  "sn38.16:7.6": "bhavo dukkhañca sakkāyo.",
  "sn38.16:8.1": "Imasmiṃ dhammavinaye dukkaranti."
}