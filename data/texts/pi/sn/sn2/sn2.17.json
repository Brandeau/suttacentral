  "sn2.17:1.1": "Saṃyutta Nikāya 2",
  "sn2.17:2.1": "2. Anāthapiṇḍikavagga",
  "sn2.17:3.1": "17. Subrahmasutta",
  "sn2.17:4.1": "Ekamantaṃ ṭhito kho subrahmā devaputto bhagavantaṃ gāthāya ajjhabhāsi:",
  "sn2.17:5.1": "“Niccaṃ utrastamidaṃ cittaṃ,",
  "sn2.17:5.2": "<span class=\\\"var\\\" title=\\\"niccamubbiggamidaṃ (s1-3) | ubbiggidaṃ (mahāsatipaṭṭhānasuttavaṇṇanāyaṃ)\\\" id=\\\"note132\\\">niccaṃ ubbiggamidaṃ</span> mano;",
  "sn2.17:5.3": "Anuppannesu <span class=\\\"var\\\" title=\\\"kiccesu (si, s1-3, pts1)\\\" id=\\\"note133\\\">kicchesu</span>,",
  "sn2.17:5.4": "atho uppatitesu ca;",
  "sn2.17:5.5": "Sace atthi anutrastaṃ,",
  "sn2.17:5.6": "taṃ me akkhāhi pucchito”ti.",
  "sn2.17:6.1": "“Nāññatra <span class=\\\"var\\\" title=\\\"bojjhaṅgā tapasā (bj) | bojjhaṅgatapasā (s1-3, km, pts1-2)\\\" id=\\\"note134\\\">bojjhā tapasā</span>,",
  "sn2.17:6.2": "nāññatrindriyasaṃvarā;",
  "sn2.17:6.3": "Nāññatra sabbanissaggā,",
  "sn2.17:6.4": "sotthiṃ passāmi pāṇinan”ti.",
  "sn2.17:7.1": "Idamavoca … pe …",
  "sn2.17:7.2": "tatthevantaradhāyīti."
}