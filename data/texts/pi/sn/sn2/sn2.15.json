  "sn2.15:1.1": "Saṃyutta Nikāya 2",
  "sn2.15:2.1": "2. Anāthapiṇḍikavagga",
  "sn2.15:3.1": "15. Candanasutta",
  "sn2.15:4.1": "Ekamantaṃ ṭhito kho candano devaputto bhagavantaṃ gāthāya ajjhabhāsi:",
  "sn2.15:5.1": "“<span class=\\\"var\\\" title=\\\"ko sū dha (bj, pts2)\\\" id=\\\"note129\\\">Kathaṃsu</span> tarati oghaṃ,",
  "sn2.15:5.2": "rattindivamatandito;",
  "sn2.15:5.3": "Appatiṭṭhe anālambe,",
  "sn2.15:5.4": "ko gambhīre na sīdatī”ti.",
  "sn2.15:6.1": "“Sabbadā sīlasampanno,",
  "sn2.15:6.2": "Paññavā susamāhito;",
  "sn2.15:6.3": "Āraddhavīriyo pahitatto,",
  "sn2.15:6.4": "Oghaṃ tarati duttaraṃ.",
  "sn2.15:7.1": "Virato kāmasaññāya,",
  "sn2.15:7.2": "rūpasaṃyojanātigo;",
  "sn2.15:7.3": "Nandīrāgaparikkhīṇo,",
  "sn2.15:7.4": "so gambhīre na sīdatī”ti."
}