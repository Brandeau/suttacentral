  "sn2.28:1.1": "Saṃyutta Nikāya 2",
  "sn2.28:2.1": "3. Nānātitthiyavagga",
  "sn2.28:3.1": "28. Nandivisālasutta",
  "sn2.28:4.1": "Ekamantaṃ ṭhito kho nandivisālo devaputto bhagavantaṃ gāthāya ajjhabhāsi:",
  "sn2.28:5.1": "<span class=\\\"cross\\\" title=\\\"^sn1.29#1 [29. Catucakkasutta] | ^pe5#6 [Hāravibhaṅgapañcamabhūmi]\\\" id=\\\"note155\\\">*</span> <a class=\\\"sc\\\" id=\\\"2\\\"></a>“Catucakkaṃ navadvāraṃ,",
  "sn2.28:5.2": "puṇṇaṃ lobhena saṃyutaṃ;",
  "sn2.28:5.3": "Paṅkajātaṃ mahāvīra,",
  "sn2.28:5.4": "kathaṃ yātrā bhavissatī”ti.",
  "sn2.28:6.1": "“Chetvā naddhiṃ varattañca,",
  "sn2.28:6.2": "icchālobhañca pāpakaṃ;",
  "sn2.28:6.3": "Samūlaṃ taṇhamabbuyha,",
  "sn2.28:6.4": "evaṃ yātrā bhavissatī”ti."
}