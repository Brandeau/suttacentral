  "sn2.7:1.1": "Saṃyutta Nikāya 2",
  "sn2.7:2.1": "1. Paṭhamavagga",
  "sn2.7:3.1": "7. Pañcālacaṇḍasutta",
  "sn2.7:4.1": "Sāvatthinidānaṃ.",
  "sn2.7:4.2": "Ekamantaṃ ṭhito kho pañcālacaṇḍo devaputto bhagavato santike imaṃ gāthaṃ abhāsi:",
  "sn2.7:5.1": "“Sambādhe vata okāsaṃ,",
  "sn2.7:5.2": "Avindi bhūrimedhaso;",
  "sn2.7:5.3": "Yo <span class=\\\"var\\\" title=\\\"jhānamabudhā (bj, pts2) | jhānamabuddhi (s1-3, km, pts1, mr)\\\" id=\\\"note119\\\">jhānamabujjhi</span> buddho,",
  "sn2.7:5.4": "Paṭilīnanisabho munī”ti.",
  "sn2.7:6.1": "“Sambādhe vāpi vindanti, (pañcālacaṇḍāti bhagavā)",
  "sn2.7:6.2": "Dhammaṃ nibbānapattiyā;",
  "sn2.7:6.3": "Ye satiṃ paccalatthaṃsu,",
  "sn2.7:6.4": "Sammā te susamāhitā”ti."
}