  "sn2.21:1.1": "Saṃyutta Nikāya 2",
  "sn2.21:2.1": "3. Nānātitthiyavagga",
  "sn2.21:3.1": "21. Sivasutta",
  "sn2.21:4.1": "<span class=\\\"evam\\\">Evaṃ me sutaṃ—​</span>",
  "sn2.21:4.2": "ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "sn2.21:4.3": "Atha kho sivo devaputto abhikkantāya rattiyā abhikkantavaṇṇo kevalakappaṃ jetavanaṃ obhāsetvā yena bhagavā tenupasaṅkami;",
  "sn2.21:4.4": "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi.",
  "sn2.21:4.5": "Ekamantaṃ ṭhito kho sivo devaputto bhagavato santike imā gāthāyo abhāsi:",
  "sn2.21:5.1": "“Sabbhireva samāsetha,",
  "sn2.21:5.2": "sabbhi kubbetha santhavaṃ;",
  "sn2.21:5.3": "Sataṃ saddhammamaññāya,",
  "sn2.21:5.4": "seyyo hoti na pāpiyo.",
  "sn2.21:6.1": "Sabbhireva samāsetha,",
  "sn2.21:6.2": "sabbhi kubbetha santhavaṃ;",
  "sn2.21:6.3": "Sataṃ saddhammamaññāya,",
  "sn2.21:6.4": "paññā labbhati nāññato.",
  "sn2.21:7.1": "Sabbhireva samāsetha,",
  "sn2.21:7.2": "sabbhi kubbetha santhavaṃ;",
  "sn2.21:7.3": "Sataṃ saddhammamaññāya,",
  "sn2.21:7.4": "sokamajjhe na socati.",
  "sn2.21:8.1": "Sabbhireva samāsetha,",
  "sn2.21:8.2": "sabbhi kubbetha santhavaṃ;",
  "sn2.21:8.3": "Sataṃ saddhammamaññāya,",
  "sn2.21:8.4": "ñātimajjhe virocati.",
  "sn2.21:9.1": "Sabbhireva samāsetha,",
  "sn2.21:9.2": "sabbhi kubbetha santhavaṃ;",
  "sn2.21:9.3": "Sataṃ saddhammamaññāya,",
  "sn2.21:9.4": "sattā gacchanti suggatiṃ.",
  "sn2.21:10.1": "Sabbhireva samāsetha,",
  "sn2.21:10.2": "sabbhi kubbetha santhavaṃ;",
  "sn2.21:10.3": "Sataṃ saddhammamaññāya,",
  "sn2.21:10.4": "sattā tiṭṭhanti sātatan”ti.",
  "sn2.21:11.1": "Atha kho bhagavā sivaṃ devaputtaṃ gāthāya paccabhāsi:",
  "sn2.21:12.1": "“Sabbhireva samāsetha,",
  "sn2.21:12.2": "sabbhi kubbetha santhavaṃ;",
  "sn2.21:12.3": "Sataṃ saddhammamaññāya,",
  "sn2.21:12.4": "sabbadukkhā pamuccatī”ti."
}