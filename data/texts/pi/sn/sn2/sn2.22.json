  "sn2.22:1.1": "Saṃyutta Nikāya 2",
  "sn2.22:2.1": "3. Nānātitthiyavagga",
  "sn2.22:3.1": "22. Khemasutta",
  "sn2.22:4.1": "Ekamantaṃ ṭhito kho khemo devaputto bhagavato santike imā gāthāyo abhāsi:",
  "sn2.22:5.1": "“Caranti bālā dummedhā,",
  "sn2.22:5.2": "amitteneva attanā;",
  "sn2.22:5.3": "Karontā pāpakaṃ kammaṃ,",
  "sn2.22:5.4": "yaṃ hoti kaṭukapphalaṃ.",
  "sn2.22:6.1": "Na taṃ kammaṃ kataṃ sādhu,",
  "sn2.22:6.2": "yaṃ katvā anutappati;",
  "sn2.22:6.3": "Yassa assumukho rodaṃ,",
  "sn2.22:6.4": "vipākaṃ paṭisevati.",
  "sn2.22:7.1": "Tañca kammaṃ kataṃ sādhu,",
  "sn2.22:7.2": "yaṃ katvā nānutappati;",
  "sn2.22:7.3": "Yassa patīto sumano,",
  "sn2.22:7.4": "vipākaṃ paṭisevati.",
  "sn2.22:8.1": "<span class=\\\"cross\\\" title=\\\"^mi3.4.5#1 [Vāyāmakaraṇapañha]\\\" id=\\\"note140\\\">*</span> <a class=\\\"sc\\\" id=\\\"5\\\"></a><span class=\\\"var\\\" title=\\\"paṭigacceva (bj)\\\" id=\\\"note141\\\">Paṭikacceva</span> taṃ kayirā,",
  "sn2.22:8.2": "yaṃ jaññā hitamattano;",
  "sn2.22:8.3": "Na sākaṭikacintāya,",
  "sn2.22:8.4": "mantā dhīro parakkame.",
  "sn2.22:9.1": "Yathā sākaṭiko <span class=\\\"var\\\" title=\\\"panthaṃ (bj, pts1-2) | pasatthaṃ (s1-3, km)\\\" id=\\\"note142\\\">maṭṭhaṃ</span>,",
  "sn2.22:9.2": "samaṃ hitvā mahāpathaṃ;",
  "sn2.22:9.3": "Visamaṃ maggamāruyha,",
  "sn2.22:9.4": "akkhacchinnova jhāyati.",
  "sn2.22:10.1": "Evaṃ dhammā apakkamma,",
  "sn2.22:10.2": "adhammamanuvattiya;",
  "sn2.22:10.3": "Mando maccumukhaṃ patto,",
  "sn2.22:10.4": "akkhacchinnova jhāyatī”ti."
}