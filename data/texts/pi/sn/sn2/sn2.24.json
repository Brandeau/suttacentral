  "sn2.24:1.1": "Saṃyutta Nikāya 2",
  "sn2.24:2.1": "3. Nānātitthiyavagga",
  "sn2.24:3.1": "<span class=\\\"var\\\" title=\\\"ghaṭikārasuttaṃ (s3)\\\" id=\\\"note146\\\">24. Ghaṭīkārasutta</span>",
  "sn2.24:4.1": "Ekamantaṃ ṭhito kho ghaṭīkāro devaputto bhagavato santike imaṃ gāthaṃ abhāsi:",
  "sn2.24:5.1": "“Avihaṃ upapannāse,",
  "sn2.24:5.2": "vimuttā satta bhikkhavo;",
  "sn2.24:5.3": "Rāgadosaparikkhīṇā,",
  "sn2.24:5.4": "tiṇṇā loke visattikan”ti.",
  "sn2.24:6.1": "“Ke ca te ataruṃ paṅkaṃ,",
  "sn2.24:6.2": "maccudheyyaṃ suduttaraṃ;",
  "sn2.24:6.3": "Ke hitvā mānusaṃ dehaṃ,",
  "sn2.24:6.4": "dibbayogaṃ upaccagun”ti.",
  "sn2.24:7.1": "“Upako <span class=\\\"var\\\" title=\\\"phalagaṇḍo (si, s1-3, pts1-2, mr)\\\" id=\\\"note147\\\">palagaṇḍo</span> ca,",
  "sn2.24:7.2": "pukkusāti ca te tayo;",
  "sn2.24:7.3": "Bhaddiyo khaṇḍadevo ca,",
  "sn2.24:7.4": "<span class=\\\"var\\\" title=\\\"bāhudantī ca piṅgiyo (bj) | bāhudakkhi ca siṅgiyo (s1) | bāhuraggi ca siṅgiyo (s2, s3) | bāhuraggi ca piṅgiyo (pts1-2)\\\" id=\\\"note148\\\">bāhuraggi ca saṅgiyo</span>;",
  "sn2.24:7.5": "Te hitvā mānusaṃ dehaṃ,",
  "sn2.24:7.6": "dibbayogaṃ upaccagun”ti.",
  "sn2.24:8.1": "“Kusalī bhāsasī tesaṃ,",
  "sn2.24:8.2": "mārapāsappahāyinaṃ;",
  "sn2.24:8.3": "Kassa te dhammamaññāya,",
  "sn2.24:8.4": "acchiduṃ bhavabandhanan”ti.",
  "sn2.24:9.1": "“Na aññatra bhagavatā,",
  "sn2.24:9.2": "nāññatra tava sāsanā;",
  "sn2.24:9.3": "Yassa te dhammamaññāya,",
  "sn2.24:9.4": "acchiduṃ bhavabandhanaṃ.",
  "sn2.24:10.1": "Yattha nāmañca rūpañca,",
  "sn2.24:10.2": "asesaṃ uparujjhati;",
  "sn2.24:10.3": "Taṃ te dhammaṃ idhaññāya,",
  "sn2.24:10.4": "acchiduṃ bhavabandhanan”ti.",
  "sn2.24:11.1": "“Gambhīraṃ bhāsasī vācaṃ,",
  "sn2.24:11.2": "dubbijānaṃ sudubbudhaṃ;",
  "sn2.24:11.3": "Kassa tvaṃ dhammamaññāya,",
  "sn2.24:11.4": "vācaṃ bhāsasi īdisan”ti.",
  "sn2.24:12.1": "“Kumbhakāro pure āsiṃ,",
  "sn2.24:12.2": "vekaḷiṅge ghaṭīkaro;",
  "sn2.24:12.3": "Mātāpettibharo āsiṃ,",
  "sn2.24:12.4": "kassapassa upāsako.",
  "sn2.24:13.1": "Virato methunā dhammā,",
  "sn2.24:13.2": "brahmacārī nirāmiso;",
  "sn2.24:13.3": "Ahuvā te sagāmeyyo,",
  "sn2.24:13.4": "ahuvā te pure sakhā.",
  "sn2.24:14.1": "Sohamete pajānāmi,",
  "sn2.24:14.2": "vimutte satta bhikkhavo;",
  "sn2.24:14.3": "Rāgadosaparikkhīṇe,",
  "sn2.24:14.4": "tiṇṇe loke visattikan”ti.",
  "sn2.24:15.1": "“Evametaṃ tadā āsi,",
  "sn2.24:15.2": "yathā bhāsasi bhaggava;",
  "sn2.24:15.3": "Kumbhakāro pure āsi,",
  "sn2.24:15.4": "vekaḷiṅge ghaṭīkaro.",
  "sn2.24:16.1": "Mātāpettibharo āsi,",
  "sn2.24:16.2": "kassapassa upāsako;",
  "sn2.24:16.3": "Virato methunā dhammā,",
  "sn2.24:16.4": "brahmacārī nirāmiso;",
  "sn2.24:16.5": "Ahuvā me sagāmeyyo,",
  "sn2.24:16.6": "ahuvā me pure sakhā”ti.",
  "sn2.24:17.1": "“Evametaṃ purāṇānaṃ,",
  "sn2.24:17.2": "sahāyānaṃ ahu saṅgamo;",
  "sn2.24:17.3": "Ubhinnaṃ bhāvitattānaṃ,",
  "sn2.24:17.4": "sarīrantimadhārinan”ti."
}