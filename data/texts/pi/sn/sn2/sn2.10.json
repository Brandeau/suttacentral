  "sn2.10:1.1": "Saṃyutta Nikāya 2",
  "sn2.10:2.1": "1. Paṭhamavagga",
  "sn2.10:3.1": "<span class=\\\"var\\\" title=\\\"suriyasuttaṃ (bj, s1-3, pts2) | suriyo (pts1)\\\" id=\\\"note121\\\">10. Sūriyasutta</span>",
  "sn2.10:4.1": "Sāvatthinidānaṃ.",
  "sn2.10:4.2": "Tena kho pana samayena sūriyo devaputto rāhunā asurindena gahito hoti.",
  "sn2.10:4.3": "Atha kho sūriyo devaputto bhagavantaṃ anussaramāno tāyaṃ velāyaṃ imaṃ gāthaṃ abhāsi:",
  "sn2.10:5.1": "“Namo te buddha vīratthu,",
  "sn2.10:5.2": "vippamuttosi sabbadhi;",
  "sn2.10:5.3": "Sambādhapaṭipannosmi,",
  "sn2.10:5.4": "tassa me saraṇaṃ bhavā”ti.",
  "sn2.10:6.1": "Atha kho bhagavā sūriyaṃ devaputtaṃ ārabbha rāhuṃ asurindaṃ gāthāhi ajjhabhāsi:",
  "sn2.10:7.1": "“Tathāgataṃ arahantaṃ,",
  "sn2.10:7.2": "sūriyo saraṇaṃ gato;",
  "sn2.10:7.3": "Rāhu <span class=\\\"var\\\" title=\\\"suriyaṃ (bj, s1-3, km, pts1-2)\\\" id=\\\"note122\\\">sūriyaṃ</span> pamuñcassu,",
  "sn2.10:7.4": "buddhā lokānukampakā.",
  "sn2.10:8.1": "Yo andhakāre tamasi pabhaṅkaro,",
  "sn2.10:8.2": "Verocano maṇḍalī uggatejo;",
  "sn2.10:8.3": "Mā rāhu gilī caramantalikkhe,",
  "sn2.10:8.4": "Pajaṃ mamaṃ rāhu pamuñca sūriyan”ti.",
  "sn2.10:9.1": "Atha kho rāhu asurindo sūriyaṃ devaputtaṃ muñcitvā taramānarūpo yena vepacitti asurindo tenupasaṅkami;",
  "sn2.10:9.2": "upasaṅkamitvā saṃviggo lomahaṭṭhajāto ekamantaṃ aṭṭhāsi.",
  "sn2.10:9.3": "Ekamantaṃ ṭhitaṃ kho rāhuṃ asurindaṃ vepacitti asurindo gāthāya ajjhabhāsi:",
  "sn2.10:10.1": "“Kiṃ nu santaramānova,",
  "sn2.10:10.2": "rāhu sūriyaṃ pamuñcasi;",
  "sn2.10:10.3": "Saṃviggarūpo āgamma,",
  "sn2.10:10.4": "kiṃ nu bhītova tiṭṭhasī”ti.",
  "sn2.10:11.1": "“Sattadhā me phale muddhā,",
  "sn2.10:11.2": "jīvanto na sukhaṃ labhe;",
  "sn2.10:11.3": "Buddhagāthābhigītomhi,",
  "sn2.10:11.4": "no ce muñceyya sūriyan”ti.",
  "sn2.10:12.1": "Paṭhamo vaggo.",
  "sn2.10:13.1": "Dve kassapā ca māgho ca,",
  "sn2.10:13.2": "Māgadho dāmali kāmado;",
  "sn2.10:13.3": "Pañcālacaṇḍo tāyano,",
  "sn2.10:13.4": "Candimasūriyena te dasāti."
}