  "sn18.10:1.1": "Saṃyutta Nikāya 18",
  "sn18.10:2.1": "1. Paṭhamavagga",
  "sn18.10:3.1": "10. Khandhasutta",
  "sn18.10:4.1": "Sāvatthiyaṃ viharati.",
  "sn18.10:4.2": "“Taṃ kiṃ maññasi, rāhula, rūpaṃ niccaṃ vā aniccaṃ vā”ti?",
  "sn18.10:4.3": "“Aniccaṃ, bhante” …",
  "sn18.10:4.4": "“vedanā … pe …",
  "sn18.10:4.5": "saññā …",
  "sn18.10:4.6": "saṅkhārā …",
  "sn18.10:4.7": "viññāṇaṃ niccaṃ vā aniccaṃ vā”ti?",
  "sn18.10:4.8": "“Aniccaṃ, bhante” …",
  "sn18.10:4.9": "“evaṃ passaṃ, rāhula, sutavā ariyasāvako rūpasmimpi nibbindati … pe …",
  "sn18.10:4.10": "vedanāyapi nibbindati …",
  "sn18.10:4.11": "saññāyapi nibbindati …",
  "sn18.10:4.12": "saṅkhāresupi nibbindati …",
  "sn18.10:4.13": "viññāṇasmimpi nibbindati;",
  "sn18.10:4.14": "nibbindaṃ virajjati;",
  "sn18.10:4.15": "virāgā vimuccati;",
  "sn18.10:4.16": "vimuttasmiṃ vimuttamiti ñāṇaṃ hoti.",
  "sn18.10:4.17": "‘Khīṇā jāti, vusitaṃ brahmacariyaṃ, kataṃ karaṇīyaṃ, nāparaṃ itthattāyā’ti pajānātī”ti.",
  "sn18.10:5.1": "Dasamaṃ.",
  "sn18.10:6.1": "Paṭhamo vaggo.",
  "sn18.10:7.1": "Cakkhu rūpañca viññāṇaṃ,",
  "sn18.10:7.2": "samphasso vedanāya ca;",
  "sn18.10:7.3": "Saññā sañcetanā taṇhā,",
  "sn18.10:7.4": "dhātu khandhena te dasāti."
}