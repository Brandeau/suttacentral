  "sn18.7:1.1": "Saṃyutta Nikāya 18",
  "sn18.7:2.1": "1. Paṭhamavagga",
  "sn18.7:3.1": "7. Sañcetanāsutta",
  "sn18.7:4.1": "Sāvatthiyaṃ viharati.",
  "sn18.7:4.2": "“Taṃ kiṃ maññasi, rāhula, rūpasañcetanā niccā vā aniccā vā”ti?",
  "sn18.7:4.3": "“Aniccā, bhante” …",
  "sn18.7:4.4": "“saddasañcetanā … pe …",
  "sn18.7:4.5": "gandhasañcetanā …",
  "sn18.7:4.6": "rasasañcetanā …",
  "sn18.7:4.7": "phoṭṭhabbasañcetanā …",
  "sn18.7:4.8": "dhammasañcetanā niccā vā aniccā vā”ti?",
  "sn18.7:4.9": "“Aniccā, bhante” …",
  "sn18.7:4.10": "“evaṃ passaṃ, rāhula, sutavā ariyasāvako rūpasañcetanāyapi nibbindati … pe …",
  "sn18.7:4.11": "saddasañcetanāyapi nibbindati …",
  "sn18.7:4.12": "gandhasañcetanāyapi nibbindati …",
  "sn18.7:4.13": "rasasañcetanāyapi nibbindati …",
  "sn18.7:4.14": "phoṭṭhabbasañcetanāyapi nibbindati …",
  "sn18.7:4.15": "dhammasañcetanāyapi nibbindati … pe …",
  "sn18.7:4.16": "pajānātī”ti.",
  "sn18.7:5.1": "Sattamaṃ."
}