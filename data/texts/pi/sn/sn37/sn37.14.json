  "sn37.14:1.1": "Saṃyutta Nikāya 37",
  "sn37.14:2.1": "1. Paṭhamapeyyālavagga",
  "sn37.14:3.1": "14. Pañcaverasutta",
  "sn37.14:4.1": "“Pañcahi, anuruddha, dhammehi samannāgato mātugāmo … pe …",
  "sn37.14:4.2": "nirayaṃ upapajjati.",
  "sn37.14:4.3": "Katamehi pañcahi?",
  "sn37.14:4.4": "Pāṇātipātī ca hoti, adinnādāyī ca hoti, kāmesumicchācārī ca hoti, musāvādī ca hoti, surāmerayamajjappamādaṭṭhāyī ca hoti—",
  "sn37.14:4.5": "imehi kho, anuruddha, pañcahi dhammehi samannāgato mātugāmo kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapajjatī”ti.",
  "sn37.14:5.1": "Cuddasamaṃ.",
  "sn37.14:6.1": "Paṭhamapeyyālavaggo.",
  "sn37.14:7.1": "Mātugāmo <span class=\\\"var\\\" title=\\\"dve manāpā amanāpā ca (s1-3)\\\" id=\\\"note394\\\">puriso ca</span>,",
  "sn37.14:7.2": "āveṇikā <span class=\\\"var\\\" title=\\\"āveṇiko tīhi dhammehi (bj) | āveṇikā tīhi anuruddho (s1-3)\\\" id=\\\"note395\\\">tidhammo ca</span>;",
  "sn37.14:7.3": "Kodhano upanāhī ca,",
  "sn37.14:7.4": "issukī maccharena ca;",
  "sn37.14:7.5": "Aticārī ca dussīlo,",
  "sn37.14:7.6": "appassuto ca kusīto;",
  "sn37.14:7.7": "Muṭṭhassati pañcaveraṃ,",
  "sn37.14:7.8": "kaṇhapakkhe pakāsito."
}