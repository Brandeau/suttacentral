  "sn1.54:1.1": "Saṃyutta Nikāya 1",
  "sn1.54:2.1": "6. Jarāvagga",
  "sn1.54:3.1": "54. Vatthusutta",
  "sn1.54:4.1": "“Kiṃsu vatthu manussānaṃ,",
  "sn1.54:4.2": "kiṃsūdha paramo sakhā;",
  "sn1.54:4.3": "Kiṃsu bhūtā upajīvanti,",
  "sn1.54:4.4": "ye pāṇā <span class=\\\"var\\\" title=\\\"paṭhaviṃ sitāti (bj, s1-3, km, pts2) | pathaviṃ sitāti (pts1)\\\" id=\\\"note86\\\">pathavissitā”ti</span>.",
  "sn1.54:5.1": "“Puttā vatthu manussānaṃ,",
  "sn1.54:5.2": "<span class=\\\"var\\\" title=\\\"bhariyāva (bj, pts2) | bhariyā (s1-3, km)\\\" id=\\\"note87\\\">bhariyā ca</span> paramo sakhā;",
  "sn1.54:5.3": "Vuṭṭhiṃ bhūtā upajīvanti,",
  "sn1.54:5.4": "ye pāṇā pathavissitā”ti."
