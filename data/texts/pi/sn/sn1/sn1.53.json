  "sn1.53:1.1": "Saṃyutta Nikāya 1",
  "sn1.53:2.1": "6. Jarāvagga",
  "sn1.53:3.1": "53. Mittasutta",
  "sn1.53:4.1": "“Kiṃsu <span class=\\\"var\\\" title=\\\"pasavato (s1-3) | pathavato (pts1, mr)\\\" id=\\\"note85\\\">pavasato</span> mittaṃ,",
  "sn1.53:4.2": "kiṃsu mittaṃ sake ghare;",
  "sn1.53:4.3": "Kiṃ mittaṃ atthajātassa,",
  "sn1.53:4.4": "kiṃ mittaṃ samparāyikan”ti.",
  "sn1.53:5.1": "“Sattho pavasato mittaṃ,",
  "sn1.53:5.2": "mātā mittaṃ sake ghare;",
  "sn1.53:5.3": "Sahāyo atthajātassa,",
  "sn1.53:5.4": "hoti mittaṃ punappunaṃ;",
  "sn1.53:5.5": "Sayaṅkatāni puññāni,",
  "sn1.53:5.6": "taṃ mittaṃ samparāyikan”ti."
}