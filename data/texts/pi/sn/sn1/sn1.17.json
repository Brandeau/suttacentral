  "sn1.17:1.1": "Saṃyutta Nikāya 1",
  "sn1.17:2.1": "2. Nandanavagga",
  "sn1.17:3.1": "17. Dukkarasutta",
  "sn1.17:4.1": "“Dukkaraṃ duttitikkhañca,",
  "sn1.17:4.2": "abyattena ca sāmaññaṃ;",
  "sn1.17:4.3": "Bahūhi tattha sambādhā,",
  "sn1.17:4.4": "yattha bālo visīdatī”ti.",
  "sn1.17:5.1": "“Katihaṃ careyya sāmaññaṃ,",
  "sn1.17:5.2": "cittañce na nivāraye;",
  "sn1.17:5.3": "Pade pade visīdeyya,",
  "sn1.17:5.4": "saṅkappānaṃ vasānugoti.",
  "sn1.17:6.1": "<span class=\\\"cross\\\" title=\\\"^sn35.240#1 [240. Kummopamasutta] | ^mi7.2.5#1 [Kummaṅgapañha]\\\" id=\\\"note26\\\">*</span> <a class=\\\"sc\\\" id=\\\"3\\\"></a>Kummova aṅgāni sake kapāle,",
  "sn1.17:6.2": "Samodahaṃ bhikkhu manovitakke;",
  "sn1.17:6.3": "Anissito aññamaheṭhayāno,",
  "sn1.17:6.4": "Parinibbuto nūpavadeyya kañcī”ti."
}