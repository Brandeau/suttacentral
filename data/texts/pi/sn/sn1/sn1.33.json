  "sn1.33:1.1": "Saṃyutta Nikāya 1",
  "sn1.33:2.1": "4. Satullapakāyikavagga",
  "sn1.33:3.1": "33. Sādhusutta",
  "sn1.33:4.1": "Sāvatthinidānaṃ.",
  "sn1.33:4.2": "Atha kho sambahulā satullapakāyikā devatāyo abhikkantāya rattiyā abhikkantavaṇṇā kevalakappaṃ jetavanaṃ obhāsetvā yena bhagavā tenupasaṅkamiṃsu;",
  "sn1.33:4.3": "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhaṃsu.",
  "sn1.33:4.4": "Ekamantaṃ ṭhitā kho ekā devatā bhagavato santike imaṃ udānaṃ udānesi:",
  "sn1.33:5.1": "“Sādhu kho mārisa dānaṃ,",
  "sn1.33:5.2": "maccherā ca pamādā ca;",
  "sn1.33:5.3": "Evaṃ dānaṃ na dīyati,",
  "sn1.33:5.4": "puññaṃ ākaṅkhamānena;",
  "sn1.33:5.5": "Deyyaṃ hoti vijānatā”ti.",
  "sn1.33:6.1": "Atha kho aparā devatā bhagavato santike imaṃ udānaṃ udānesi:",
  "sn1.33:7.1": "“Sādhu kho mārisa dānaṃ,",
  "sn1.33:7.2": "Api ca appakasmimpi sāhu dānaṃ.",
  "sn1.33:8.1": "Appasmeke pavecchanti,",
  "sn1.33:8.2": "bahuneke na dicchare;",
  "sn1.33:8.3": "Appasmā dakkhiṇā dinnā,",
  "sn1.33:8.4": "sahassena samaṃ mitā”ti.",
  "sn1.33:9.1": "Atha kho aparā devatā bhagavato santike imaṃ udānaṃ udānesi:",
  "sn1.33:10.1": "“Sādhu kho mārisa dānaṃ,",
  "sn1.33:10.2": "Appakasmimpi sāhu dānaṃ;",
  "sn1.33:10.3": "Api ca saddhāyapi sāhu dānaṃ,<span class=\\\"cross\\\" title=\\\"^sn1.72#1 [72. Rathasutta]\\\" id=\\\"note57\\\">*</span>",
  "sn1.33:10.4": "Dānañca yuddhañca samānamāhu;",
  "sn1.33:10.5": "Appāpi santā bahuke jinanti,",
  "sn1.33:10.6": "Appampi ce saddahāno dadāti;",
  "sn1.33:10.7": "Teneva so hoti sukhī paratthā”ti.",
  "sn1.33:11.1": "Atha kho aparā devatā bhagavato santike imaṃ udānaṃ udānesi:",
  "sn1.33:12.1": "“Sādhu kho mārisa dānaṃ,",
  "sn1.33:12.2": "Appakasmimpi sāhu dānaṃ;",
  "sn1.33:12.3": "Saddhāyapi sāhu dānaṃ,",
  "sn1.33:12.4": "Api ca dhammaladdhassāpi sāhu dānaṃ.",
  "sn1.33:13.1": "<span class=\\\"cross\\\" title=\\\"^sn1.71#1 [71. Chetvāsutta]\\\" id=\\\"note58\\\">*</span> <a class=\\\"sc\\\" id=\\\"10\\\"></a><a class=\\\"pts2ed\\\" id=\\\"pts2ed1.45\\\"></a>Yo dhammaladdhassa dadāti dānaṃ,",
  "sn1.33:13.2": "Uṭṭhānavīriyādhigatassa jantu;",
  "sn1.33:13.3": "Atikkamma so vetaraṇiṃ yamassa,",
  "sn1.33:13.4": "Dibbāni ṭhānāni upeti macco”ti.",
  "sn1.33:14.1": "Atha kho aparā devatā bhagavato santike imaṃ udānaṃ udānesi:",
  "sn1.33:15.1": "“Sādhu kho mārisa dānaṃ,",
  "sn1.33:15.2": "Appakasmimpi sāhu dānaṃ;",
  "sn1.33:15.3": "Saddhāyapi sāhu dānaṃ,",
  "sn1.33:15.4": "Dhammaladdhassāpi sāhu dānaṃ;",
  "sn1.33:15.5": "Api ca viceyya dānampi sāhu dānaṃ.",
  "sn1.33:16.1": "Viceyya dānaṃ sugatappasatthaṃ,",
  "sn1.33:16.2": "Ye dakkhiṇeyyā idha jīvaloke;",
  "sn1.33:16.3": "Etesu dinnāni mahapphalāni,",
  "sn1.33:16.4": "Bījāni vuttāni yathā sukhette”ti.",
  "sn1.33:17.1": "Atha kho aparā devatā bhagavato santike imaṃ udānaṃ udānesi:",
  "sn1.33:18.1": "“Sādhu kho mārisa dānaṃ,",
  "sn1.33:18.2": "Appakasmimpi sāhu dānaṃ;",
  "sn1.33:18.3": "Saddhāyapi sāhu dānaṃ,",
  "sn1.33:18.4": "Dhammaladdhassāpi sāhu dānaṃ;",
  "sn1.33:18.5": "Viceyya dānampi sāhu dānaṃ,",
  "sn1.33:18.6": "Api ca pāṇesupi sādhu saṃyamo.",
  "sn1.33:19.1": "Yo <span class=\\\"var\\\" title=\\\"pāṇabhūtesu (bj, pts1-2)\\\" id=\\\"note59\\\">pāṇabhūtāni</span> aheṭhayaṃ caraṃ,",
  "sn1.33:19.2": "Parūpavādā na karonti pāpaṃ;",
  "sn1.33:19.3": "Bhīruṃ pasaṃsanti na hi tattha sūraṃ,",
  "sn1.33:19.4": "Bhayā hi santo na karonti pāpan”ti.",
  "sn1.33:20.1": "Atha kho aparā devatā bhagavantaṃ etadavoca:",
  "sn1.33:20.2": "“kassa nu kho, bhagavā, subhāsitan”ti?",
  "sn1.33:21.1": "“Sabbāsaṃ vo subhāsitaṃ pariyāyena, api ca mamapi suṇātha—",
  "sn1.33:22.1": "Saddhā hi dānaṃ bahudhā pasatthaṃ,",
  "sn1.33:22.2": "Dānā ca kho dhammapadaṃva seyyo;",
  "sn1.33:22.3": "Pubbe <span class=\\\"var\\\" title=\\\"pubbeva hi pubbatareva santi (^ja424#8 [Ādittajātaka])\\\" id=\\\"note60\\\">ca hi pubbatare ca santo</span>,",
  "sn1.33:22.4": "Nibbānamevajjhagamuṃ sapaññā”ti."
}