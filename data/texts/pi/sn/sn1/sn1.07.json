  "sn1.7:1.1": "Saṃyutta Nikāya 1",
  "sn1.7:2.1": "1. Naḷavagga",
  "sn1.7:3.1": "7. Appaṭividitasutta",
  "sn1.7:4.1": "Sāvatthinidānaṃ.",
  "sn1.7:4.2": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi:",
  "sn1.7:5.1": "“Yesaṃ dhammā appaṭividitā,",
  "sn1.7:5.2": "Paravādesu <span class=\\\"var\\\" title=\\\"niyyare (mr)\\\" id=\\\"note8\\\">nīyare</span>;",
  "sn1.7:5.3": "Suttā te nappabujjhanti,",
  "sn1.7:5.4": "Kālo tesaṃ pabujjhitun”ti.",
  "sn1.7:6.1": "“Yesaṃ dhammā suppaṭividitā,",
  "sn1.7:6.2": "Paravādesu na nīyare;",
  "sn1.7:6.3": "Te sambuddhā sammadaññā,",
  "sn1.7:6.4": "Caranti visame saman”ti."
}