  "sn1.76:1.1": "Saṃyutta Nikāya 1",
  "sn1.76:2.1": "8. Chetvāvagga",
  "sn1.76:3.1": "76. Najīratisutta",
  "sn1.76:4.1": "“Kiṃ jīrati kiṃ na jīrati,",
  "sn1.76:4.2": "kiṃsu uppathoti vuccati;",
  "sn1.76:4.3": "Kiṃsu dhammānaṃ paripantho,",
  "sn1.76:4.4": "kiṃsu rattindivakkhayo;",
  "sn1.76:4.5": "Kiṃ malaṃ brahmacariyassa,",
  "sn1.76:4.6": "kiṃ sinānamanodakaṃ.",
  "sn1.76:5.1": "Kati lokasmiṃ chiddāni,",
  "sn1.76:5.2": "yattha <span class=\\\"var\\\" title=\\\"cittaṃ (bj, s1-3, km, pts1-2)\\\" id=\\\"note110\\\">vittaṃ</span> na tiṭṭhati;",
  "sn1.76:5.3": "Bhagavantaṃ puṭṭhumāgamma,",
  "sn1.76:5.4": "kathaṃ jānemu taṃ mayan”ti.",
  "sn1.76:6.1": "“Rūpaṃ jīrati maccānaṃ,",
  "sn1.76:6.2": "nāmagottaṃ na jīrati;",
  "sn1.76:6.3": "Rāgo uppathoti vuccati.",
  "sn1.76:7.1": "Lobho dhammānaṃ paripantho,",
  "sn1.76:7.2": "Vayo rattindivakkhayo;",
  "sn1.76:7.3": "Itthī malaṃ brahmacariyassa,",
  "sn1.76:7.4": "Etthāyaṃ sajjate pajā;",
  "sn1.76:7.5": "Tapo ca brahmacariyañca,",
  "sn1.76:7.6": "Taṃ sinānamanodakaṃ.",
  "sn1.76:8.1": "Cha lokasmiṃ chiddāni,",
  "sn1.76:8.2": "yattha vittaṃ na tiṭṭhati;",
  "sn1.76:8.3": "<span class=\\\"var\\\" title=\\\"ālassañca (bj, pts2) | alassañca (pts1)\\\" id=\\\"note111\\\">Ālasyañca</span> pamādo ca,",
  "sn1.76:8.4": "anuṭṭhānaṃ asaṃyamo;",
  "sn1.76:8.5": "Niddā <span class=\\\"var\\\" title=\\\"tandi (bj)\\\" id=\\\"note112\\\">tandī</span> ca te chidde,",
  "sn1.76:8.6": "sabbaso taṃ vivajjaye”ti."
}