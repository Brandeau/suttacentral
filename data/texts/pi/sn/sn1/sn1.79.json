  "sn1.79:1.1": "Saṃyutta Nikāya 1",
  "sn1.79:2.1": "8. Chetvāvagga",
  "sn1.79:3.1": "79. Pātheyyasutta",
  "sn1.79:4.1": "“Kiṃsu bandhati pātheyyaṃ,",
  "sn1.79:4.2": "kiṃsu bhogānamāsayo;",
  "sn1.79:4.3": "Kiṃsu naraṃ parikassati,",
  "sn1.79:4.4": "kiṃsu lokasmi dujjahaṃ;",
  "sn1.79:4.5": "Kismiṃ baddhā puthū sattā,",
  "sn1.79:4.6": "pāsena sakuṇī yathā”ti.",
  "sn1.79:5.1": "“Saddhā bandhati pātheyyaṃ,",
  "sn1.79:5.2": "sirī bhogānamāsayo;",
  "sn1.79:5.3": "Icchā naraṃ parikassati,",
  "sn1.79:5.4": "icchā lokasmi dujjahā;",
  "sn1.79:5.5": "Icchābaddhā puthū sattā,",
  "sn1.79:5.6": "pāsena sakuṇī yathā”ti."
}