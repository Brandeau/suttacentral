  "sn1.13:1.1": "Saṃyutta Nikāya 1",
  "sn1.13:2.1": "2. Nandanavagga",
  "sn1.13:3.1": "<span class=\\\"var\\\" title=\\\"natthiputtasuttaṃ (bj) | natthiputtasamasuttaṃ (pts2)\\\" id=\\\"note14\\\">13. Natthiputtasamasutta</span>",
  "sn1.13:4.1": "Sāvatthinidānaṃ.",
  "sn1.13:4.2": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi:",
  "sn1.13:5.1": "<span class=\\\"cross\\\" title=\\\"^ne6#485 [Sāsanapaṭṭhāna] | ^pe2#156 [Sāsanapaṭṭhānadutiyabhūmi]\\\" id=\\\"note15\\\">*</span> <a class=\\\"sc\\\" id=\\\"2\\\"></a>“Natthi puttasamaṃ pemaṃ,",
  "sn1.13:5.2": "natthi gosamitaṃ dhanaṃ;",
  "sn1.13:5.3": "Natthi <span class=\\\"var\\\" title=\\\"suriyasamā (bj, s1-3, km, pts1-2)\\\" id=\\\"note16\\\">sūriyasamā</span> ābhā,",
  "sn1.13:5.4": "samuddaparamā sarā”ti.",
  "sn1.13:6.1": "“Natthi attasamaṃ pemaṃ,",
  "sn1.13:6.2": "natthi dhaññasamaṃ dhanaṃ;",
  "sn1.13:6.3": "Natthi paññāsamā ābhā,",
  "sn1.13:6.4": "vuṭṭhi ve paramā sarā”ti."
