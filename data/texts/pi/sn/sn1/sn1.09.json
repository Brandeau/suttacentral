  "sn1.9:1.1": "Saṃyutta Nikāya 1",
  "sn1.9:2.1": "1. Naḷavagga",
  "sn1.9:3.1": "<span class=\\\"var\\\" title=\\\"namānakāmasuttaṃ (bj)\\\" id=\\\"note9\\\">9. Mānakāmasutta</span>",
  "sn1.9:4.1": "Sāvatthinidānaṃ.",
  "sn1.9:4.2": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi:",
  "sn1.9:5.1": "“Na mānakāmassa damo idhatthi,",
  "sn1.9:5.2": "Na monamatthi asamāhitassa;",
  "sn1.9:5.3": "Eko araññe viharaṃ pamatto,",
  "sn1.9:5.4": "Na maccudheyyassa tareyya pāran”ti.",
  "sn1.9:6.1": "“Mānaṃ pahāya susamāhitatto,",
  "sn1.9:6.2": "Sucetaso sabbadhi vippamutto;",
  "sn1.9:6.3": "Eko araññe viharaṃ appamatto,",
  "sn1.9:6.4": "Sa maccudheyyassa tareyya pāran”ti."
}