  "sn1.30:1.1": "Saṃyutta Nikāya 1",
  "sn1.30:2.1": "3. Sattivagga",
  "sn1.30:3.1": "30. Eṇijaṅghasutta",
  "sn1.30:4.1": "“Eṇijaṅghaṃ kisaṃ vīraṃ,",
  "sn1.30:4.2": "appāhāraṃ alolupaṃ;",
  "sn1.30:4.3": "Sīhaṃvekacaraṃ nāgaṃ,",
  "sn1.30:4.4": "kāmesu anapekkhinaṃ;",
  "sn1.30:4.5": "Upasaṅkamma pucchāma,",
  "sn1.30:4.6": "kathaṃ dukkhā pamuccatī”ti.",
  "sn1.30:5.1": "“Pañca kāmaguṇā loke,",
  "sn1.30:5.2": "manochaṭṭhā paveditā;",
  "sn1.30:5.3": "Ettha chandaṃ virājetvā,",
  "sn1.30:5.4": "evaṃ dukkhā pamuccatī”ti.",
  "sn1.30:6.1": "Sattivaggo tatiyo.",
  "sn1.30:7.1": "Sattiyā phusati ceva,",
  "sn1.30:7.2": "jaṭā manonivāraṇā;",
  "sn1.30:7.3": "Arahantena pajjoto,",
  "sn1.30:7.4": "sarā mahaddhanena ca;",
  "sn1.30:7.5": "Catucakkena navamaṃ,",
  "sn1.30:7.6": "eṇijaṅghena te dasāti."
}