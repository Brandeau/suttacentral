  "sn1.47:1.1": "Saṃyutta Nikāya 1",
  "sn1.47:2.1": "5. Ādittavagga",
  "sn1.47:3.1": "47. Vanaropasutta",
  "sn1.47:4.1": "“Kesaṃ divā ca ratto ca,",
  "sn1.47:4.2": "sadā puññaṃ pavaḍḍhati;",
  "sn1.47:4.3": "Dhammaṭṭhā sīlasampannā,",
  "sn1.47:4.4": "ke janā saggagāmino”ti.",
  "sn1.47:5.1": "“Ārāmaropā vanaropā,",
  "sn1.47:5.2": "ye janā setukārakā;",
  "sn1.47:5.3": "Papañca udapānañca,",
  "sn1.47:5.4": "ye dadanti upassayaṃ.",
  "sn1.47:6.1": "Tesaṃ divā ca ratto ca,",
  "sn1.47:6.2": "sadā puññaṃ pavaḍḍhati;",
  "sn1.47:6.3": "Dhammaṭṭhā sīlasampannā,",
  "sn1.47:6.4": "te janā saggagāmino”ti."
}