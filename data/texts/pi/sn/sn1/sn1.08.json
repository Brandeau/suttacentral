  "sn1.8:1.1": "Saṃyutta Nikāya 1",
  "sn1.8:2.1": "1. Naḷavagga",
  "sn1.8:3.1": "8. Susammuṭṭhasutta",
  "sn1.8:4.1": "Sāvatthinidānaṃ.",
  "sn1.8:4.2": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi:",
  "sn1.8:5.1": "“Yesaṃ dhammā susammuṭṭhā,",
  "sn1.8:5.2": "paravādesu nīyare;",
  "sn1.8:5.3": "Suttā te nappabujjhanti,",
  "sn1.8:5.4": "kālo tesaṃ pabujjhitun”ti.",
  "sn1.8:6.1": "“Yesaṃ dhammā asammuṭṭhā,",
  "sn1.8:6.2": "paravādesu na nīyare;",
  "sn1.8:6.3": "Te sambuddhā sammadaññā,",
  "sn1.8:6.4": "caranti visame saman”ti."
}