  "sn1.49:1.1": "Saṃyutta Nikāya 1",
  "sn1.49:2.1": "5. Ādittavagga",
  "sn1.49:3.1": "49. Maccharisutta",
  "sn1.49:4.1": "“Yedha maccharino loke,",
  "sn1.49:4.2": "kadariyā paribhāsakā;",
  "sn1.49:4.3": "Aññesaṃ dadamānānaṃ,",
  "sn1.49:4.4": "antarāyakarā narā.",
  "sn1.49:5.1": "Kīdiso tesaṃ vipāko,",
  "sn1.49:5.2": "samparāyo ca kīdiso;",
  "sn1.49:5.3": "Bhagavantaṃ puṭṭhumāgamma,",
  "sn1.49:5.4": "kathaṃ jānemu taṃ mayan”ti.",
  "sn1.49:6.1": "“Yedha maccharino loke,",
  "sn1.49:6.2": "kadariyā paribhāsakā;",
  "sn1.49:6.3": "Aññesaṃ dadamānānaṃ,",
  "sn1.49:6.4": "antarāyakarā narā.",
  "sn1.49:7.1": "Nirayaṃ tiracchānayoniṃ,",
  "sn1.49:7.2": "yamalokaṃ upapajjare;",
  "sn1.49:7.3": "Sace enti manussattaṃ,",
  "sn1.49:7.4": "dalidde jāyare kule.",
  "sn1.49:8.1": "Coḷaṃ piṇḍo ratī khiḍḍā,",
  "sn1.49:8.2": "yattha kicchena labbhati;",
  "sn1.49:8.3": "Parato <span class=\\\"var\\\" title=\\\"āsiṃsare (bj, s1-3, km, pts1-2)\\\" id=\\\"note79\\\">āsīsare</span> bālā,",
  "sn1.49:8.4": "tampi tesaṃ na labbhati;",
  "sn1.49:8.5": "Diṭṭhe dhammesa vipāko,",
  "sn1.49:8.6": "<span class=\\\"var\\\" title=\\\"samparāyo (s1-3, km)\\\" id=\\\"note80\\\">samparāye</span> ca duggatī”ti.",
  "sn1.49:9.1": "“Itihetaṃ vijānāma,",
  "sn1.49:9.2": "aññaṃ pucchāma gotama;",
  "sn1.49:9.3": "Yedha laddhā manussattaṃ,",
  "sn1.49:9.4": "vadaññū vītamaccharā.",
  "sn1.49:10.1": "Buddhe pasannā dhamme ca,",
  "sn1.49:10.2": "saṅghe ca tibbagāravā;",
  "sn1.49:10.3": "Kīdiso tesaṃ vipāko,",
  "sn1.49:10.4": "samparāyo ca kīdiso;",
  "sn1.49:10.5": "Bhagavantaṃ puṭṭhumāgamma,",
  "sn1.49:10.6": "kathaṃ jānemu taṃ mayan”ti.",
  "sn1.49:11.1": "“Yedha laddhā manussattaṃ,",
  "sn1.49:11.2": "vadaññū vītamaccharā;",
  "sn1.49:11.3": "Buddhe pasannā dhamme ca,",
  "sn1.49:11.4": "saṃghe ca tibbagāravā;",
  "sn1.49:11.5": "Ete <span class=\\\"var\\\" title=\\\"sagge (bj, s1-3, km, pts1-2)\\\" id=\\\"note81\\\">saggā</span> pakāsanti,",
  "sn1.49:11.6": "yattha te upapajjare.",
  "sn1.49:12.1": "Sace enti manussattaṃ,",
  "sn1.49:12.2": "aḍḍhe ājāyare kule;",
  "sn1.49:12.3": "Coḷaṃ piṇḍo ratī khiḍḍā,",
  "sn1.49:12.4": "yatthākicchena labbhati.",
  "sn1.49:13.1": "Parasambhatesu bhogesu,",
  "sn1.49:13.2": "vasavattīva modare;",
  "sn1.49:13.3": "Diṭṭhe dhammesa vipāko,",
  "sn1.49:13.4": "samparāye ca suggatī”ti."
}