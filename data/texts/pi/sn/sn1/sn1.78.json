  "sn1.78:1.1": "Saṃyutta Nikāya 1",
  "sn1.78:2.1": "8. Chetvāvagga",
  "sn1.78:3.1": "78. Kāmasutta",
  "sn1.78:4.1": "“Kimatthakāmo na dade,",
  "sn1.78:4.2": "kiṃ macco na pariccaje;",
  "sn1.78:4.3": "Kiṃsu muñceyya kalyāṇaṃ,",
  "sn1.78:4.4": "pāpikaṃ na ca mocaye”ti.",
  "sn1.78:5.1": "“Attānaṃ na dade poso,",
  "sn1.78:5.2": "attānaṃ na pariccaje;",
  "sn1.78:5.3": "Vācaṃ muñceyya kalyāṇaṃ,",
  "sn1.78:5.4": "pāpikañca na mocaye”ti."
}