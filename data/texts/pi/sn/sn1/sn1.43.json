  "sn1.43:1.1": "Saṃyutta Nikāya 1",
  "sn1.43:2.1": "5. Ādittavagga",
  "sn1.43:3.1": "43. Annasutta",
  "sn1.43:4.1": "“Annamevābhinandanti,",
  "sn1.43:4.2": "ubhaye devamānusā;",
  "sn1.43:4.3": "Atha ko nāma so yakkho,",
  "sn1.43:4.4": "yaṃ annaṃ nābhinandatī”ti.",
  "sn1.43:5.1": "“Ye naṃ dadanti saddhāya,",
  "sn1.43:5.2": "vippasannena cetasā;",
  "sn1.43:5.3": "Tameva annaṃ bhajati,",
  "sn1.43:5.4": "asmiṃ loke paramhi ca.",
  "sn1.43:6.1": "Tasmā vineyya maccheraṃ,",
  "sn1.43:6.2": "dajjā dānaṃ malābhibhū;",
  "sn1.43:6.3": "Puññāni paralokasmiṃ,",
  "sn1.43:6.4": "patiṭṭhā honti pāṇinan”ti."
}