  "sn1.19:1.1": "Saṃyutta Nikāya 1",
  "sn1.19:2.1": "2. Nandanavagga",
  "sn1.19:3.1": "19. Kuṭikāsutta",
  "sn1.19:4.1": "“Kacci te kuṭikā natthi,",
  "sn1.19:4.2": "kacci natthi kulāvakā;",
  "sn1.19:4.3": "Kacci santānakā natthi,",
  "sn1.19:4.4": "kacci muttosi bandhanā”ti.",
  "sn1.19:5.1": "“Taggha me kuṭikā natthi,",
  "sn1.19:5.2": "taggha natthi kulāvakā;",
  "sn1.19:5.3": "Taggha santānakā natthi,",
  "sn1.19:5.4": "taggha muttomhi bandhanā”ti.",
  "sn1.19:6.1": "“Kintāhaṃ kuṭikaṃ brūmi,",
  "sn1.19:6.2": "kiṃ te brūmi kulāvakaṃ;",
  "sn1.19:6.3": "Kiṃ te santānakaṃ brūmi,",
  "sn1.19:6.4": "kintāhaṃ brūmi bandhanan”ti.",
  "sn1.19:7.1": "“Mātaraṃ kuṭikaṃ brūsi,",
  "sn1.19:7.2": "bhariyaṃ brūsi kulāvakaṃ;",
  "sn1.19:7.3": "Putte santānake brūsi,",
  "sn1.19:7.4": "taṇhaṃ me brūsi bandhanan”ti.",
  "sn1.19:8.1": "“Sāhu te kuṭikā natthi,",
  "sn1.19:8.2": "sāhu natthi kulāvakā;",
  "sn1.19:8.3": "Sāhu santānakā natthi,",
  "sn1.19:8.4": "sāhu muttosi bandhanā”ti."
}