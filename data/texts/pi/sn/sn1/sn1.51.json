  "sn1.51:1.1": "Saṃyutta Nikāya 1",
  "sn1.51:2.1": "6. Jarāvagga",
  "sn1.51:3.1": "51. Jarāsutta",
  "sn1.51:4.1": "“Kiṃsu yāva jarā sādhu,",
  "sn1.51:4.2": "kiṃsu sādhu patiṭṭhitaṃ;",
  "sn1.51:4.3": "Kiṃsu narānaṃ ratanaṃ,",
  "sn1.51:4.4": "kiṃsu corehi dūharan”ti.",
  "sn1.51:5.1": "“Sīlaṃ yāva jarā sādhu,",
  "sn1.51:5.2": "saddhā sādhu patiṭṭhitā;",
  "sn1.51:5.3": "Paññā narānaṃ ratanaṃ,",
  "sn1.51:5.4": "puññaṃ corehi dūharan”ti."
}