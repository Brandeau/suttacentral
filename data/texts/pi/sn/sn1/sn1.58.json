  "sn1.58:1.1": "Saṃyutta Nikāya 1",
  "sn1.58:2.1": "6. Jarāvagga",
  "sn1.58:3.1": "58. Uppathasutta",
  "sn1.58:4.1": "“Kiṃsu uppatho akkhāto,",
  "sn1.58:4.2": "kiṃsu rattindivakkhayo;",
  "sn1.58:4.3": "Kiṃ malaṃ brahmacariyassa,",
  "sn1.58:4.4": "kiṃ sinānamanodakan”ti.",
  "sn1.58:5.1": "“Rāgo uppatho akkhāto,",
  "sn1.58:5.2": "Vayo rattindivakkhayo;",
  "sn1.58:5.3": "Itthī malaṃ brahmacariyassa,",
  "sn1.58:5.4": "Etthāyaṃ sajjate pajā;",
  "sn1.58:5.5": "Tapo ca brahmacariyañca,",
  "sn1.58:5.6": "Taṃ sinānamanodakan”ti."
}