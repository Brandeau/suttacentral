  "sn1.28:1.1": "Saṃyutta Nikāya 1",
  "sn1.28:2.1": "3. Sattivagga",
  "sn1.28:3.1": "28. Mahaddhanasutta",
  "sn1.28:4.1": "“Mahaddhanā mahābhogā,",
  "sn1.28:4.2": "raṭṭhavantopi khattiyā;",
  "sn1.28:4.3": "Aññamaññābhigijjhanti,",
  "sn1.28:4.4": "kāmesu analaṅkatā.",
  "sn1.28:5.1": "Tesu ussukkajātesu,",
  "sn1.28:5.2": "bhavasotānusārisu;",
  "sn1.28:5.3": "<span class=\\\"var\\\" title=\\\"rodhataṇhaṃ (s1-3, km) | gedhataṇhaṃ (pts1-2, mr)\\\" id=\\\"note47\\\">Kedha taṇhaṃ</span> <span class=\\\"var\\\" title=\\\"pavāhiṃsu (s1-3, km, mr)\\\" id=\\\"note48\\\">pajahiṃsu</span>,",
  "sn1.28:5.4": "ke lokasmiṃ anussukā”ti.",
  "sn1.28:6.1": "“Hitvā agāraṃ pabbajitā,",
  "sn1.28:6.2": "hitvā puttaṃ pasuṃ piyaṃ;",
  "sn1.28:6.3": "Hitvā rāgañca dosañca,",
  "sn1.28:6.4": "avijjañca virājiya;",
  "sn1.28:6.5": "Khīṇāsavā arahanto,",
  "sn1.28:6.6": "te lokasmiṃ anussukā”ti."
}