  "sn1.80:1.1": "Saṃyutta Nikāya 1",
  "sn1.80:2.1": "8. Chetvāvagga",
  "sn1.80:3.1": "80. Pajjotasutta",
  "sn1.80:4.1": "“Kiṃsu lokasmi pajjoto,",
  "sn1.80:4.2": "kiṃsu lokasmi jāgaro;",
  "sn1.80:4.3": "Kiṃsu kamme sajīvānaṃ,",
  "sn1.80:4.4": "kimassa iriyāpatho.",
  "sn1.80:5.1": "Kiṃsu <span class=\\\"var\\\" title=\\\"kiṃ ālasyānālasyañca (mr)\\\" id=\\\"note114\\\">alasaṃ analasañca</span>,",
  "sn1.80:5.2": "Mātā puttaṃva posati;",
  "sn1.80:5.3": "Kiṃ bhūtā upajīvanti,",
  "sn1.80:5.4": "Ye pāṇā pathavissitā”ti.",
  "sn1.80:6.1": "“Paññā lokasmi pajjoto,",
  "sn1.80:6.2": "sati lokasmi jāgaro;",
  "sn1.80:6.3": "Gāvo kamme sajīvānaṃ,",
  "sn1.80:6.4": "sītassa iriyāpatho.",
  "sn1.80:7.1": "Vuṭṭhi alasaṃ analasañca,",
  "sn1.80:7.2": "Mātā puttaṃva posati;",
  "sn1.80:7.3": "Vuṭṭhiṃ bhūtā upajīvanti,",
  "sn1.80:7.4": "Ye pāṇā pathavissitā”ti."
}