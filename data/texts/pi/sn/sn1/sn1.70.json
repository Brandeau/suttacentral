  "sn1.70:1.1": "Saṃyutta Nikāya 1",
  "sn1.70:2.1": "7. Addhavagga",
  "sn1.70:3.1": "70. Lokasutta",
  "sn1.70:4.1": "“Kismiṃ loko samuppanno,",
  "sn1.70:4.2": "kismiṃ kubbati santhavaṃ;",
  "sn1.70:4.3": "Kissa loko upādāya,",
  "sn1.70:4.4": "kismiṃ loko vihaññatī”ti.",
  "sn1.70:5.1": "“Chasu loko samuppanno,",
  "sn1.70:5.2": "chasu kubbati santhavaṃ;",
  "sn1.70:5.3": "Channameva upādāya,",
  "sn1.70:5.4": "chasu loko vihaññatī”ti.",
  "sn1.70:6.1": "Addhavaggo sattamo.",
  "sn1.70:7.1": "Nāmaṃ cittañca taṇhā ca,",
  "sn1.70:7.2": "saṃyojanañca bandhanā;",
  "sn1.70:7.3": "Abbhāhatuḍḍito pihito,",
  "sn1.70:7.4": "icchā lokena te dasāti."
}