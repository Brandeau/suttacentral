  "sn1.71:1.1": "Saṃyutta Nikāya 1",
  "sn1.71:2.1": "<span class=\\\"var\\\" title=\\\"jhatvāvaggo (bj, pts2) | ghatvāvaggo (s1-3)\\\" id=\\\"note102\\\">8. Chetvāvagga</span>",
  "sn1.71:3.1": "<span class=\\\"var\\\" title=\\\"jhatvāsuttaṃ (bj, pts2) | ghatvāsuttaṃ (s1-3)\\\" id=\\\"note103\\\">71. Chetvāsutta</span>",
  "sn1.71:4.1": "Sāvatthinidānaṃ.",
  "sn1.71:4.2": "Ekamantaṃ ṭhitā kho sā devatā bhagavantaṃ gāthāya ajjhabhāsi:",
  "sn1.71:5.1": "“Kiṃsu <span class=\\\"var\\\" title=\\\"jhatvā (bj, pts2) | ghatvā (s1-3, km)\\\" id=\\\"note104\\\">chetvā</span> sukhaṃ seti,",
  "sn1.71:5.2": "kiṃsu chetvā na socati;",
  "sn1.71:5.3": "Kissassu ekadhammassa,",
  "sn1.71:5.4": "vadhaṃ rocesi gotamā”ti.",
  "sn1.71:6.1": "“Kodhaṃ chetvā sukhaṃ seti,",
  "sn1.71:6.2": "kodhaṃ chetvā na socati;",
  "sn1.71:6.3": "Kodhassa visamūlassa,",
  "sn1.71:6.4": "madhuraggassa devate;",
  "sn1.71:6.5": "Vadhaṃ ariyā pasaṃsanti,",
  "sn1.71:6.6": "tañhi chetvā na socatī”ti."
}