  "sn1.22:1.1": "Saṃyutta Nikāya 1",
  "sn1.22:2.1": "3. Sattivagga",
  "sn1.22:3.1": "22. Phusatisutta",
  "sn1.22:4.1": "“Nāphusantaṃ phusati ca,",
  "sn1.22:4.2": "phusantañca tato phuse;",
  "sn1.22:4.3": "Tasmā phusantaṃ phusati,",
  "sn1.22:4.4": "appaduṭṭhapadosinan”ti.",
  "sn1.22:5.1": "“Yo appaduṭṭhassa narassa dussati,",
  "sn1.22:5.2": "Suddhassa posassa anaṅgaṇassa;",
  "sn1.22:5.3": "Tameva bālaṃ pacceti pāpaṃ,",
  "sn1.22:5.4": "Sukhumo rajo paṭivātaṃva khitto”ti."
}