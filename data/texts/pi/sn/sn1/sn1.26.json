  "sn1.26:1.1": "Saṃyutta Nikāya 1",
  "sn1.26:2.1": "3. Sattivagga",
  "sn1.26:3.1": "26. Pajjotasutta",
  "sn1.26:4.1": "“Kati lokasmiṃ pajjotā,",
  "sn1.26:4.2": "Tehi loko <span class=\\\"var\\\" title=\\\"pabhāsati (si)\\\" id=\\\"note45\\\">pakāsati</span>;",
  "sn1.26:4.3": "<span class=\\\"var\\\" title=\\\"bhavantaṃ (pts1-2, mr)\\\" id=\\\"note46\\\">Bhagavantaṃ</span> puṭṭhumāgamma,",
  "sn1.26:4.4": "Kathaṃ jānemu taṃ mayan”ti.",
  "sn1.26:5.1": "“Cattāro loke pajjotā,",
  "sn1.26:5.2": "pañcamettha na vijjati;",
  "sn1.26:5.3": "Divā tapati ādicco,",
  "sn1.26:5.4": "rattimābhāti candimā.",
  "sn1.26:6.1": "Atha aggi divārattiṃ,",
  "sn1.26:6.2": "tattha tattha pakāsati;",
  "sn1.26:6.3": "Sambuddho tapataṃ seṭṭho,",
  "sn1.26:6.4": "esā ābhā anuttarā”ti."
}