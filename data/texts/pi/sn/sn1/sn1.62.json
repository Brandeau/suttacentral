  "sn1.62:1.1": "Saṃyutta Nikāya 1",
  "sn1.62:2.1": "7. Addhavagga",
  "sn1.62:3.1": "62. Cittasutta",
  "sn1.62:4.1": "“Kenassu nīyati loko,",
  "sn1.62:4.2": "kenassu parikassati;",
  "sn1.62:4.3": "Kissassu ekadhammassa,",
  "sn1.62:4.4": "sabbeva vasamanvagū”ti.",
  "sn1.62:5.1": "“Cittena nīyati loko,",
  "sn1.62:5.2": "cittena parikassati;",
  "sn1.62:5.3": "Cittassa ekadhammassa,",
  "sn1.62:5.4": "sabbeva vasamanvagū”ti."
}