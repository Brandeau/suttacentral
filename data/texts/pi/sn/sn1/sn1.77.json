  "sn1.77:1.1": "Saṃyutta Nikāya 1",
  "sn1.77:2.1": "8. Chetvāvagga",
  "sn1.77:3.1": "<span class=\\\"var\\\" title=\\\"issarasuttaṃ (bj, s1-3) | issaraṃ (pts1)\\\" id=\\\"note113\\\">77. Issariyasutta</span>",
  "sn1.77:4.1": "“Kiṃsu issariyaṃ loke,",
  "sn1.77:4.2": "kiṃsu bhaṇḍānamuttamaṃ;",
  "sn1.77:4.3": "Kiṃsu satthamalaṃ loke,",
  "sn1.77:4.4": "kiṃsu lokasmimabbudaṃ.",
  "sn1.77:5.1": "Kiṃsu harantaṃ vārenti,",
  "sn1.77:5.2": "haranto pana ko piyo;",
  "sn1.77:5.3": "Kiṃsu punappunāyantaṃ,",
  "sn1.77:5.4": "abhinandanti paṇḍitā”ti.",
  "sn1.77:6.1": "“Vaso issariyaṃ loke,",
  "sn1.77:6.2": "itthī bhaṇḍānamuttamaṃ;",
  "sn1.77:6.3": "Kodho satthamalaṃ loke,",
  "sn1.77:6.4": "corā lokasmimabbudā.",
  "sn1.77:7.1": "Coraṃ harantaṃ vārenti,",
  "sn1.77:7.2": "haranto samaṇo piyo;",
  "sn1.77:7.3": "Samaṇaṃ punappunāyantaṃ,",
  "sn1.77:7.4": "abhinandanti paṇḍitā”ti."
}