  "sn1.48:1.1": "Saṃyutta Nikāya 1",
  "sn1.48:2.1": "5. Ādittavagga",
  "sn1.48:3.1": "48. Jetavanasutta",
  "sn1.48:4.1": "“Idañhi taṃ jetavanaṃ,",
  "sn1.48:4.2": "isisaṃghanisevitaṃ;",
  "sn1.48:4.3": "<span class=\\\"var\\\" title=\\\"āvuṭṭhaṃ (mr)\\\" id=\\\"note78\\\">Āvutthaṃ</span> dhammarājena,",
  "sn1.48:4.4": "pītisañjananaṃ mama.",
  "sn1.48:5.1": "Kammaṃ vijjā ca dhammo ca,",
  "sn1.48:5.2": "sīlaṃ jīvitamuttamaṃ;",
  "sn1.48:5.3": "Etena maccā sujjhanti,",
  "sn1.48:5.4": "na gottena dhanena vā.",
  "sn1.48:6.1": "Tasmā hi paṇḍito poso,",
  "sn1.48:6.2": "sampassaṃ atthamattano;",
  "sn1.48:6.3": "Yoniso vicine dhammaṃ,",
  "sn1.48:6.4": "evaṃ tattha visujjhati.",
  "sn1.48:7.1": "Sāriputtova paññāya,",
  "sn1.48:7.2": "sīlena upasamena ca;",
  "sn1.48:7.3": "Yopi pāraṅgato bhikkhu,",
  "sn1.48:7.4": "etāvaparamo siyā”ti."
}