  "sn1.42:1.1": "Saṃyutta Nikāya 1",
  "sn1.42:2.1": "5. Ādittavagga",
  "sn1.42:3.1": "42. Kiṃdadasutta",
  "sn1.42:4.1": "“Kiṃdado balado hoti,",
  "sn1.42:4.2": "kiṃdado hoti vaṇṇado;",
  "sn1.42:4.3": "Kiṃdado sukhado hoti,",
  "sn1.42:4.4": "kiṃdado hoti cakkhudo;",
  "sn1.42:4.5": "Ko ca sabbadado hoti,",
  "sn1.42:4.6": "taṃ me akkhāhi pucchito”ti.",
  "sn1.42:5.1": "“Annado balado hoti,",
  "sn1.42:5.2": "vatthado hoti vaṇṇado;",
  "sn1.42:5.3": "Yānado sukhado hoti,",
  "sn1.42:5.4": "dīpado hoti cakkhudo.",
  "sn1.42:6.1": "So ca sabbadado hoti,",
  "sn1.42:6.2": "yo dadāti upassayaṃ;",
  "sn1.42:6.3": "Amataṃ dado ca so hoti,",
  "sn1.42:6.4": "yo dhammamanusāsatī”ti."
}