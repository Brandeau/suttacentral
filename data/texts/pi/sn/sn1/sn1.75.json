  "sn1.75:1.1": "Saṃyutta Nikāya 1",
  "sn1.75:2.1": "8. Chetvāvagga",
  "sn1.75:3.1": "<span class=\\\"var\\\" title=\\\"bhītasuttaṃ (bj, s1-3, pts2)\\\" id=\\\"note108\\\">75. Bhītāsutta</span>",
  "sn1.75:4.1": "<span class=\\\"cross\\\" title=\\\"^ja458#13 [Udayajātaka]-2159 | ^ne6#497 [Sāsanapaṭṭhāna]\\\" id=\\\"note109\\\">*</span> “Kiṃsūdha bhītā janatā anekā,",
  "sn1.75:4.2": "Maggo canekāyatanappavutto;",
  "sn1.75:4.3": "Pucchāmi taṃ gotama bhūripañña,",
  "sn1.75:4.4": "Kismiṃ ṭhito paralokaṃ na bhāye”ti.",
  "sn1.75:5.1": "“Vācaṃ manañca paṇidhāya sammā,",
  "sn1.75:5.2": "Kāyena pāpāni akubbamāno;",
  "sn1.75:5.3": "Bahvannapānaṃ gharamāvasanto,",
  "sn1.75:5.4": "Saddho mudū saṃvibhāgī vadaññū;",
  "sn1.75:5.5": "Etesu dhammesu ṭhito catūsu,",
  "sn1.75:5.6": "Dhamme ṭhito paralokaṃ na bhāye”ti."
}