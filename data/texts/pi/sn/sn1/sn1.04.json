  "sn1.4:1.1": "Saṃyutta Nikāya 1",
  "sn1.4:2.1": "1. Naḷavagga",
  "sn1.4:3.1": "4. Accentisutta",
  "sn1.4:4.1": "Sāvatthinidānaṃ.",
  "sn1.4:4.2": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi:",
  "sn1.4:5.1": "“Accenti kālā tarayanti rattiyo,",
  "sn1.4:5.2": "Vayoguṇā anupubbaṃ jahanti;",
  "sn1.4:5.3": "Etaṃ bhayaṃ maraṇe pekkhamāno,",
  "sn1.4:5.4": "Puññāni kayirātha sukhāvahānī”ti.",
  "sn1.4:6.1": "“Accenti kālā tarayanti rattiyo,",
  "sn1.4:6.2": "Vayoguṇā anupubbaṃ jahanti;",
  "sn1.4:6.3": "Etaṃ bhayaṃ maraṇe pekkhamāno,",
  "sn1.4:6.4": "Lokāmisaṃ pajahe santipekkho”ti."
}