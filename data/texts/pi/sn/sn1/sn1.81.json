  "sn1.81:1.1": "Saṃyutta Nikāya 1",
  "sn1.81:2.1": "8. Chetvāvagga",
  "sn1.81:3.1": "81. Araṇasutta",
  "sn1.81:4.1": "“Kesūdha araṇā loke,",
  "sn1.81:4.2": "kesaṃ vusitaṃ na nassati;",
  "sn1.81:4.3": "Kedha icchaṃ parijānanti,",
  "sn1.81:4.4": "kesaṃ bhojissiyaṃ sadā.",
  "sn1.81:5.1": "Kiṃsu mātā pitā bhātā,",
  "sn1.81:5.2": "vandanti naṃ patiṭṭhitaṃ;",
  "sn1.81:5.3": "Kiṃsu idha jātihīnaṃ,",
  "sn1.81:5.4": "abhivādenti khattiyā”ti.",
  "sn1.81:6.1": "“Samaṇīdha araṇā loke,",
  "sn1.81:6.2": "Samaṇānaṃ vusitaṃ na nassati;",
  "sn1.81:6.3": "Samaṇā icchaṃ parijānanti,",
  "sn1.81:6.4": "Samaṇānaṃ bhojissiyaṃ sadā.",
  "sn1.81:7.1": "Samaṇaṃ mātā pitā bhātā,",
  "sn1.81:7.2": "vandanti naṃ patiṭṭhitaṃ;",
  "sn1.81:7.3": "Samaṇīdha jātihīnaṃ,",
  "sn1.81:7.4": "abhivādenti khattiyā”ti.",
  "sn1.81:8.1": "Chetvāvaggo aṭṭhamo.",
  "sn1.81:9.1": "Chetvā rathañca cittañca,",
  "sn1.81:9.2": "vuṭṭhi bhītā najīrati;",
  "sn1.81:9.3": "Issaraṃ kāmaṃ pātheyyaṃ,",
  "sn1.81:9.4": "pajjoto araṇena cāti.",
  "sn1.81:10.1": "Devatāsaṃyuttaṃ samattaṃ."
}