  "sn1.50:1.1": "Saṃyutta Nikāya 1",
  "sn1.50:2.1": "5. Ādittavagga",
  "sn1.50:3.1": "50. Ghaṭīkārasutta",
  "sn1.50:4.1": "“Avihaṃ upapannāse,",
  "sn1.50:4.2": "vimuttā satta bhikkhavo;",
  "sn1.50:4.3": "Rāgadosaparikkhīṇā,",
  "sn1.50:4.4": "tiṇṇā loke visattikan”ti.",
  "sn1.50:5.1": "“Ke ca te ataruṃ <span class=\\\"var\\\" title=\\\"saṅgaṃ (bj, s1-3, pts2)\\\" id=\\\"note82\\\">paṅkaṃ</span>,",
  "sn1.50:5.2": "maccudheyyaṃ suduttaraṃ;",
  "sn1.50:5.3": "Ke hitvā mānusaṃ dehaṃ,",
  "sn1.50:5.4": "dibbayogaṃ upaccagun”ti.",
  "sn1.50:6.1": "“Upako palagaṇḍo ca,",
  "sn1.50:6.2": "pukkusāti ca te tayo;",
  "sn1.50:6.3": "Bhaddiyo khaṇḍadevo ca,",
  "sn1.50:6.4": "<span class=\\\"var\\\" title=\\\"bahudantī ca piṅgayo (bj) | bahudantī ca siṅgiyo (s1-3, pts2) | bāhuraggi ca piṅgiyo (pts1)\\\" id=\\\"note83\\\">bāhuraggi ca siṅgiyo</span>;",
  "sn1.50:6.5": "Te hitvā mānusaṃ dehaṃ,",
  "sn1.50:6.6": "dibbayogaṃ upaccagun”ti.",
  "sn1.50:7.1": "“Kusalī bhāsasī tesaṃ,",
  "sn1.50:7.2": "mārapāsappahāyinaṃ;",
  "sn1.50:7.3": "Kassa te dhammamaññāya,",
  "sn1.50:7.4": "acchiduṃ bhavabandhanan”ti.",
  "sn1.50:8.1": "“Na aññatra bhagavatā,",
  "sn1.50:8.2": "nāññatra tava sāsanā;",
  "sn1.50:8.3": "Yassa te dhammamaññāya,",
  "sn1.50:8.4": "acchiduṃ bhavabandhanaṃ.",
  "sn1.50:9.1": "Yattha nāmañca rūpañca,",
  "sn1.50:9.2": "asesaṃ uparujjhati;",
  "sn1.50:9.3": "Taṃ te dhammaṃ idhaññāya,",
  "sn1.50:9.4": "acchiduṃ bhavabandhanan”ti.",
  "sn1.50:10.1": "“Gambhīraṃ bhāsasī vācaṃ,",
  "sn1.50:10.2": "dubbijānaṃ sudubbudhaṃ;",
  "sn1.50:10.3": "Kassa tvaṃ dhammamaññāya,",
  "sn1.50:10.4": "vācaṃ bhāsasi īdisan”ti.",
  "sn1.50:11.1": "“Kumbhakāro pure āsiṃ,",
  "sn1.50:11.2": "<span class=\\\"var\\\" title=\\\"vehaliṅge (bj) | vebhaḷiṅge (s1-3, km) | vehaḷiṅge (pts1-2)\\\" id=\\\"note84\\\">vekaḷiṅge</span> ghaṭīkaro;",
  "sn1.50:11.3": "Mātāpettibharo āsiṃ,",
  "sn1.50:11.4": "kassapassa upāsako.",
  "sn1.50:12.1": "Virato methunā dhammā,",
  "sn1.50:12.2": "brahmacārī nirāmiso;",
  "sn1.50:12.3": "Ahuvā te sagāmeyyo,",
  "sn1.50:12.4": "ahuvā te pure sakhā.",
  "sn1.50:13.1": "Sohamete pajānāmi,",
  "sn1.50:13.2": "vimutte satta bhikkhavo;",
  "sn1.50:13.3": "Rāgadosaparikkhīṇe,",
  "sn1.50:13.4": "tiṇṇe loke visattikan”ti.",
  "sn1.50:14.1": "“Evametaṃ tadā āsi,",
  "sn1.50:14.2": "yathā bhāsasi bhaggava;",
  "sn1.50:14.3": "Kumbhakāro pure āsi,",
  "sn1.50:14.4": "vekaḷiṅge ghaṭīkaro;",
  "sn1.50:14.5": "Mātāpettibharo āsi,",
  "sn1.50:14.6": "kassapassa upāsako.",
  "sn1.50:15.1": "Virato methunā dhammā,",
  "sn1.50:15.2": "brahmacārī nirāmiso;",
  "sn1.50:15.3": "Ahuvā me sagāmeyyo,",
  "sn1.50:15.4": "ahuvā me pure sakhā”ti.",
  "sn1.50:16.1": "“Evametaṃ purāṇānaṃ,",
  "sn1.50:16.2": "sahāyānaṃ ahu saṅgamo;",
  "sn1.50:16.3": "Ubhinnaṃ bhāvitattānaṃ,",
  "sn1.50:16.4": "sarīrantimadhārinan”ti.",
  "sn1.50:17.1": "Ādittavaggo pañcamo.",
  "sn1.50:18.1": "Ādittaṃ kiṃdadaṃ annaṃ,",
  "sn1.50:18.2": "ekamūlaanomiyaṃ;",
  "sn1.50:18.3": "Accharāvanaropajetaṃ,",
  "sn1.50:18.4": "maccharena ghaṭīkaroti."
}