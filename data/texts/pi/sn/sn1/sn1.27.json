  "sn1.27:1.1": "Saṃyutta Nikāya 1",
  "sn1.27:2.1": "3. Sattivagga",
  "sn1.27:3.1": "27. Sarasutta",
  "sn1.27:4.1": "“Kuto sarā nivattanti,",
  "sn1.27:4.2": "kattha vaṭṭaṃ na vattati;",
  "sn1.27:4.3": "Kattha nāmañca rūpañca,",
  "sn1.27:4.4": "asesaṃ uparujjhatī”ti.",
  "sn1.27:5.1": "“Yattha āpo ca pathavī,",
  "sn1.27:5.2": "tejo vāyo na gādhati;",
  "sn1.27:5.3": "Ato sarā nivattanti,",
  "sn1.27:5.4": "ettha vaṭṭaṃ na vattati;",
  "sn1.27:5.5": "Ettha nāmañca rūpañca,",
  "sn1.27:5.6": "asesaṃ uparujjhatī”ti."
}