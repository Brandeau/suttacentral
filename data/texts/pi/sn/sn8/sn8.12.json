  "sn8.12:1.1": "Saṃyutta Nikāya 8",
  "sn8.12:2.1": "1. Vaṅgīsavagga",
  "sn8.12:3.1": "12. Vaṅgīsasutta",
  "sn8.12:4.1": "Ekaṃ samayaṃ āyasmā vaṅgīso sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "sn8.12:4.2": "Tena kho pana samayena āyasmā vaṅgīso aciraarahattappatto <span class=\\\"var\\\" title=\\\"hoti (bj, s1-3, km)\\\" id=\\\"note456\\\">hutvā</span> <span class=\\\"var\\\" title=\\\"vimuttisukhapaṭisaṃvedī (bj, pts2) | vimuttisukhapatisamvedī (pts1)\\\" id=\\\"note457\\\">vimuttisukhaṃ paṭisaṃvedī</span> tāyaṃ velāyaṃ imā gāthāyo abhāsi:",
  "sn8.12:5.1": "“Kāveyyamattā vicarimha pubbe,",
  "sn8.12:5.2": "Gāmā gāmaṃ purā puraṃ;",
  "sn8.12:5.3": "Athaddasāma sambuddhaṃ,",
  "sn8.12:5.4": "Saddhā no upapajjatha.",
  "sn8.12:6.1": "So me dhammamadesesi,",
  "sn8.12:6.2": "<span class=\\\"var\\\" title=\\\"khandhe āyatanāni dhātuyo (s1-3, km, mr) | khandhe āyatānāni dhātuyo ca (pts1)\\\" id=\\\"note458\\\">khandhāyatanadhātuyo</span>;",
  "sn8.12:6.3": "Tassāhaṃ dhammaṃ sutvāna,",
  "sn8.12:6.4": "pabbajiṃ anagāriyaṃ.",
  "sn8.12:7.1": "Bahunnaṃ vata atthāya,",
  "sn8.12:7.2": "bodhiṃ ajjhagamā muni;",
  "sn8.12:7.3": "Bhikkhūnaṃ bhikkhunīnañca,",
  "sn8.12:7.4": "ye niyāmagataddasā.",
  "sn8.12:8.1": "Svāgataṃ vata me āsi,",
  "sn8.12:8.2": "mama buddhassa santike;",
  "sn8.12:8.3": "Tisso vijjā anuppattā,",
  "sn8.12:8.4": "kataṃ buddhassa sāsanaṃ.",
  "sn8.12:9.1": "Pubbenivāsaṃ jānāmi,",
  "sn8.12:9.2": "Dibbacakkhuṃ visodhitaṃ;",
  "sn8.12:9.3": "Tevijjo iddhipattomhi,",
  "sn8.12:9.4": "Cetopariyāyakovido”ti.",
  "sn8.12:10.1": "Nikkhantaṃ arati ceva,",
  "sn8.12:10.2": "pesalā atimaññanā;",
  "sn8.12:10.3": "Ānandena subhāsitā,",
  "sn8.12:10.4": "sāriputtapavāraṇā;",
  "sn8.12:10.5": "Parosahassaṃ koṇḍañño,",
  "sn8.12:10.6": "moggallānena gaggarā;",
  "sn8.12:10.7": "Vaṅgīsena dvādasāti.",
  "sn8.12:11.1": "Vaṅgīsasaṃyuttaṃ samattaṃ."
}