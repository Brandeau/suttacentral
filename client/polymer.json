{
  "lint": {
    "rules": [
      "polymer-2"
    ]
  },
  "sources": [
    "index.html",
    "elements/**/*"
  ],
  "entrypoint": "index.html",
  "extraDependencies": [
    "localization/elements/**/*.json",
    "styles/**/*.json",
    "img/**/*",
    "files/**/*",
    "node_modules/workbox-sw/build/importScripts/*",
    "manifest.json",
    "service-worker.js",
    "bower_components/webcomponentsjs/webcomponents-loader.js"
  ],
  "builds": [
    {
      "name": "es5-bundled",
      "bundle": {
        "stripComments": true,
        "inlineCss": true,
        "sourcemaps": false
      },
      "js": {
        "compile": true,
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "addServiceWorker": false,
      "addPushManifest": true
    },
    {
      "name": "default",
      "bundle": {
        "stripComments": true,
        "inlineCss": true,
        "sourcemaps": false
      },
      "js": {
        "compile": false,
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "addServiceWorker": false,
      "addPushManifest": true
    }
  ]
}